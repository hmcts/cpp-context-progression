{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "defendantId": {
      "type": "string"
    },
    "bailStatus": {
      "enum": ["conditional","unconditional","inCustody"]
    },
    "bailDocument": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "materialId": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "materialId"
      ]
    },
    "custodyTimeLimitDate": {
      "type": ["string"]
    }
  },
  "required": [
    "caseId",
    "defendantId",
    "bailStatus"
  ]
}

