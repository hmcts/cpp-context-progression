{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/defendant-added.json",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "defendantId": {
      "type": "string"
    },
    "personId": {
      "type": "string"
    },
    "person": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string"
        },
        "nationality": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "homeTelephone": {
          "type": "string"
        },
        "workTelephone": {
          "type": "string"
        },
        "mobile": {
          "type": "string"
        },
        "fax": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "address1": {
              "type": "string"
            },
            "address2": {
              "type": "string"
            },
            "address3": {
              "type": "string"
            },
            "address4": {
              "type": "string"
            },
            "postCode": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName"
      ]
    },
    "policeDefendantId": {
      "type": "string"
    },
    "offences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "policeOffenceId": {
            "type": "string"
          },
          "cpr": {
            "type": "object",
            "properties": {
              "defendantOffender": {
                "type": "object",
                "properties": {
                  "year": {
                    "type": "string"
                  },
                  "organisationUnit": {
                    "type": "string"
                  },
                  "number": {
                    "type": "string"
                  },
                  "checkDigit": {
                    "type": "string"
                  }
                },
                "required": [
                  "year",
                  "organisationUnit",
                  "number",
                  "checkDigit"
                ]
              },
              "cjsCode": {
                "type": "string"
              },
              "offenceSequence": {
                "type": "string"
              }
            },
            "required": [
              "defendantOffender",
              "cjsCode",
              "offenceSequence"
            ]
          },
          "asnSequenceNumber": {
            "type": "string"
          },
          "cjsCode": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "wording": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "arrestDate": {
            "type": "string"
          },
          "startDate": {
            "type": "string"
          },
          "endDate": {
            "type": "string"
          },
          "chargeDate": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "policeOffenceId",
          "cpr",
          "asnSequenceNumber",
          "cjsCode",
          "description",
          "wording",
          "category",
          "startDate"
        ]
      }
    }
  },
  "required": [
    "caseId",
    "defendantId",
    "person",
    "policeDefendantId",
    "offences"
  ]
}