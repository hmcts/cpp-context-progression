{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/pet-detail-updated.json",
  "type": "object",
  "properties": {
    "petId": {
      "description": "Pet Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "isYouth": {
      "description": "Is Youth",
      "type": "boolean"
    },
    "petDefendants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "defendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }

        },
        "required": [
          "defendantId"
        ],
        "additionalProperties": false
      }
    },

    "userId": {
      "description": "Logged In User Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    }
  },
  "required": [
    "caseId",
    "petId",
    "petDefendants",
    "userId"
  ],
  "additionalProperties": false
}
