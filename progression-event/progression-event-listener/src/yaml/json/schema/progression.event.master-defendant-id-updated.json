{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/progression/events/progression.event.master-defendant-id-updated.json",
  "type": "object",
  "properties": {
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "matchedDefendants": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "defendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "prosecutionCaseId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "masterDefendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "courtProceedingsInitiated": {
            "description": "The date and time when the defendant enters the platform",
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "prosecutionCaseId",
          "defendantId",
          "masterDefendantId"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "prosecutionCaseId",
    "defendantId"
  ],
  "additionalProperties": false
}
