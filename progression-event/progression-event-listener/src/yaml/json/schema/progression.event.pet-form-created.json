{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/pet-form-created.json",
  "type": "object",
  "properties": {
    "petId": {
      "description": "Pet Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "formId": {
      "description": "Form Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "isYouth": {
      "description": "Is Youth",
      "type": "boolean"
    },
    "petDefendants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "defendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        },
        "required": [
          "defendantId"
        ],
        "additionalProperties": false
      }
    },
    "petFormData": {
      "description": "Pet Form Data",
      "type": "string"
    },
    "userId": {
      "description": "Logged In User Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "submissionId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "userName": {
      "type": "string"
    },
    "formType": {
      "description": "Form Type",
      "$ref": "http://justice.gov.uk/core/courts/formType.json"
    }
  },
  "required": [
    "caseId",
    "petId",
    "formId",
    "petDefendants"
  ],
  "anyOf": [
    {
      "required": ["userId"]
    },
    {
      "required": ["userName"]
    }
  ],
  "additionalProperties": false
}
