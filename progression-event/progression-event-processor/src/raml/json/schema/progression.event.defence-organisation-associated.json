{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/progression/events/progression.defence-organisation-associated.json",
  "type": "object",
  "properties": {
    "requesterUserId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "defenceOrganisationId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "representationType": {
      "type": "string",
      "enum": [
        "REPRESENTATION_ORDER",
        "REPRESENTATION_ORDER_APPLIED_FOR",
        "COURT_APPOINTED",
        "PRO_BONO",
        "PRIVATE_FUNDED"
      ]
    },
    "laaContractNumber": {
      "type": "string",
      "maxLength": 10
    }
  },
  "required": [
    "requesterUserId",
    "defendantId",
    "defenceOrganisationId",
    "representationType"
  ]
}