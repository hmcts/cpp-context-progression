{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/public-edit-form-requested.json",
  "type": "object",
  "properties": {
    "courtFormId": {
      "description": "Court Form Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "lockStatus": {
      "description": "Lock Status",
      "type": "object",
      "properties": {
        "isLocked": {
          "description": " Form Locked Boolean",
          "type": "boolean"
        },
        "lockedBy": {

          "description": "locked by user",
          "type": "object",
          "properties": {
            "userId": {
              "description": "user Id of user",
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "firstName": {
              "type": "string",
              "description": "First name"
            },
            "lastName": {
              "type": "string",
              "description": "Last name"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "The user's email address"
            }
          }
        },
        "lockRequestedBy": {
          "description": "lock requested by user",
          "type": "object",
          "properties": {
            "userId": {
              "description": "user Id of user",
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "firstName": {
              "type": "string",
              "description": "First name"
            },
            "lastName": {
              "type": "string",
              "description": "Last name"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "The user's email address"
            }
          }
        },
        "expiryTime": {
          "description": "Expiry time of the Locked form",
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "isLocked"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "lockStatus",
    "courtFormId"
  ],
  "additionalProperties": false
}
