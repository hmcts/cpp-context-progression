{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/public-pet-form-defendant-updated.json",
  "type": "object",
  "properties": {
    "petId": {
      "description": "Pet Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "description": "Defendant Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantData": {
      "description": "Defendant data to update",
      "type": "string"
    },
    "updatedBy": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": [
            "id",
            "firstName",
            "lastName"
          ]
        },
        {
          "required": [
            "name"
          ]
        }
      ]
    }
  },
  "required": [
    "petId",
    "caseId",
    "defendantId",
    "defendantData",
    "updatedBy"
  ],
  "additionalProperties": false
}