  "type": "object",
  "properties": {
    "updatedOffences": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/offence.json#"
      }
    },
    "hearingIds": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    }
  },
  "required": [
    "updatedOffences",
    "hearingIds",
    "defendantId"
  ],
  "additionalProperties": false
}
