{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/courts/offences-for-defendant-changed.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "modifiedDate": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "updatedOffences": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "#/definitions/defendantCaseOffences"
      }
    },
    "addedOffences": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "#/definitions/defendantCaseOffences"
      }
    },
    "deletedOffences": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "#/definitions/deletedDefendantCaseOffences"
      }
    }
  },
  "required": [
    "modifiedDate"
  ],
  "definitions": {
    "defendantCaseOffences": {
      "type": "object",
      "required": [
        "defendantId",
        "prosecutionCaseId",
        "offences"
      ],
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/offence.json"
          }
        }
      },
      "additionalProperties": false
    },
    "deletedDefendantCaseOffences": {
      "type": "object",
      "required": [
        "defendantId",
        "prosecutionCaseId",
        "offences"
      ],
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        }
      },
      "additionalProperties": false
    }
  }
}