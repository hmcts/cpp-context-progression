{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/hearing-defendant-request-adjourned.json",
  "type": "object",
  "properties": {
    "currentHearingId": {
      "description": "The current hearing which is being resulted.",
      "$ref":"http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "adjournedHearingId": {
      "description": "The new/extended hearing to where cases, defendants and offences adjourned to.",
      "$ref":"http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "defendantRequests": {
      "description": "Defendant information required for generating summons.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/listDefendantRequest.json#"
      }
    }
  },
  "required": [
    "defendantRequests"
  ],
  "additionalProperties": false
}