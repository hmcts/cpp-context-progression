{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/listing/events/public.listing.case-added-to-hearing.json",
  "type": "object",
  "description": "This is like an hearingConfirmed version for unallocated hearing where we do not want to inform the world",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "existingHearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "confirmedProsecutionCase": {
      "description": "Prosecution cases to be added in unallocated hearing",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/confirmedProsecutionCase.json"
      }
    }
  },
  "required": [
    "hearingId",
    "confirmedProsecutionCase"
  ],
  "additionalProperties": false
}