{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "defendants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "defendantId": {
            "type": "string"
          },
          "sentenceHearingReviewDecision": {
            "type": "boolean"
          },
          "sentenceHearingReviewDecisionDateTime": {
            "type": "string"
          },
          "additionalInformation": {
            "type": "object",
            "properties": {
              "noMoreInformationRequired": {
                "type": "boolean"
              },
              "probation": {
                "type": "object",
                "properties": {
                  "preSentenceReport": {
                    "type": "object",
                    "properties": {
                      "psrIsRequested": {
                        "type": "boolean"
                      },
                      "provideGuidance": {
                        "type": "string"
                      },
                      "drugAssessment": {
                        "type": "boolean"
                      }
                    }
                  },
                  "dangerousnessAssessment": {
                    "type": "boolean"
                  }
                }
              },
              "defence": {
                "type": "object",
                "properties": {
                  "statementOfMeans": {
                    "type": "object",
                    "properties": {
                      "isStatementOfMeans": {
                        "type": "boolean"
                      },
                      "details": {
                        "type": "string"
                      }
                    }
                  },
                  "medicalDocumentation": {
                    "type": "object",
                    "properties": {
                      "isMedicalDocumentation": {
                        "type": "boolean"
                      },
                      "details": {
                        "type": "string"
                      }
                    }
                  },
                  "otherDetails": {
                    "type": "string"
                  }
                }
              },
              "prosecution": {
                "type": "object",
                "properties": {
                  "ancillaryOrders": {
                    "type": "object",
                    "properties": {
                      "isAncillaryOrders": {
                        "type": "boolean"
                      },
                      "details": {
                        "type": "string"
                      }
                    }
                  },
                  "otherDetails": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "person": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "dateOfBirth": {
                "type": "string",
                "pattern": "^((([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13578]|1[02])\\-(0[1-9]|[12]\\d|3[01]))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13456789]|1[012])\\-(0[1-9]|[12]\\d|30))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-02\\-(0[1-9]|1\\d|2[0-8]))|(((1[6-9]|[2-9]\\d)(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00))\\-02\\-29))$"
              },
              "nationality": {
                "type": "string"
              },
              "gender": {
                "type": "string"
              },
              "homeTelephone": {
                "type": "string"
              },
              "workTelephone": {
                "type": "string"
              },
              "mobile": {
                "type": "string"
              },
              "fax": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "address": {
                "type": "object",
                "properties": {
                  "addressId": {
                    "type": "string"
                  },
                  "address1": {
                    "type": "string"
                  },
                  "address2": {
                    "type": "string"
                  },
                  "address3": {
                    "type": "string"
                  },
                  "address4": {
                    "type": "string"
                  },
                  "postCode": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "caseId": {
            "type": "string"
          },
          "policeDefendantId": {
            "type": "string"
          },
          "bailStatus": {
            "type": "string"
          },
          "defendantBailDocuments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "documentId": {
                  "type": "string"
                },
                "active": {
                  "type": "boolean"
                }
              }
            }
          },
          "custodyTimeLimitDate": {
            "type": "string"
          },
          "defenceSolicitorFirm": {
            "type": "string"
          },
          "interpreter": {
            "type": "object",
            "properties": {
              "needed": {
                "type": "boolean"
              },
              "language": {
                "type": "string"
              }
            }
          },
          "offences": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "offenceCode": {
                  "type": "string"
                },
                "convictionDate": {
                  "type": "string"
                },
                "plea": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string",
                      "enum": ["GUILTY"]
                    },
                    "pleaDate": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "value",
                    "pleaDate"
                  ]
                },
                "indicatedPlea": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string",
                      "enum": ["NO_INDICATION", "INDICATED_GUILTY", "INDICATED_NOT_GUILTY"]
                    },
                    "allocationDecision": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "value"
                  ]
                },
                "section": {
                  "type": "string"
                },
                "offenceSequenceNumber": {
                  "type": "integer"
                },
                "pleaMitigation": {
                  "type": "string"
                },
                "wording": {
                  "type": "string"
                },
                "policeOffenceId": {
                  "type": "string"
                },
                "cprDefendantOffenderYear": {
                  "type": "string"
                },
                "cprDefendantOffenderOrganisationUnit": {
                  "type": "string"
                },
                "cprDefendantOffenderNumber": {
                  "type": "string"
                },
                "cprDefendantOffenderCheckDigit": {
                  "type": "string"
                },
                "reason": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "arrestDate": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string"
                },
                "endDate": {
                  "type": "string"
                },
                "chargeDate": {
                  "type": "string"
                },
                "count": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}
