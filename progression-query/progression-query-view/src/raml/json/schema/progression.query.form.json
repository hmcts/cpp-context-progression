{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/courts/progression/query/court-form.json",
  "type": "object",
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "courtFormId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "data": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string"
    },
    "formType": {
      "description": "Form Type",
      "$ref": "http://justice.gov.uk/core/courts/formType.json"
    },
    "defendants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "defendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "offences": {
            "type": "array",
            "items": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            }
          }
        },
        "required": [
          "defendantId"
        ],
        "additionalProperties": false
      }
    }

  },
  "required": [
    "caseId",
    "courtFormId",
    "data",
    "lastUpdated",
    "defendants",
    "formType"
  ],
  "additionalProperties": false
}
