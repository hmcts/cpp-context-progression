{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/query/progression.query.cotr-form.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseUrn": {
      "type": "string"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingDay": {
      "type": "string",
      "format": "date-time"
    },
    "listedDurationMinutes": {
      "type": "integer"
    },
    "prosecutionFormData": {
      "type": "string"
    },
    "prosecutionAdditionalInfo": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/prosecutionAdditionalInfo"
      }
    },
    "cotrDefendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/cotrDefendant"
      }
    },
    "caseProgressionReviewNote": {
      "type": "string"
    },
    "listingReviewNotes": {
      "type": "string"
    },
    "judgeReviewNotes": {
      "type": "string"
    }
  },
  "definitions": {
    "prosecutionAdditionalInfo": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "information": {
          "type": "string"
        },
        "addedBy": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "addedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    },
    "cotrDefendant": {
      "type": "object",
      "properties": {
        "defendantNumber": {
          "type": "integer"
        },
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "dateOfBirth": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "fullName": {
          "type": "string"
        },
        "defenceFormData": {
          "type": "string"
        },
        "defenceAdditionalInfo": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defenceAdditionalInfo"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    },
    "defenceAdditionalInfo": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "information": {
          "type": "string"
        },
        "isCertificationReady": {
          "type": "boolean"
        },
        "addedBy": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "addedByName": {
          "type": "string"
        },
        "addedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    }
  },
  "required": [
    "id",
    "caseId"
  ],
  "additionalProperties": false
}