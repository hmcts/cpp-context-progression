{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/courts/progression/query/progression.query.associated-organisation",
  "type": "object",
  "properties": {
    "association": {
      "$ref": "#/definitions/association"
    }
  },
  "definitions": {
    "association": {
      "type": "object",
      "properties": {
        "organisationId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "organisationName": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "startDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "representationType": {
          "type": "string",
          "enum": [
            "REPRESENTATION_ORDER",
            "REPRESENTATION_ORDER_APPLIED_FOR",
            "COURT_APPOINTED",
            "PRO_BONO",
            "PRIVATE_FUNDED"
          ]
        },
        "address": {
          "type": "object",
          "properties": {
            "address1": {
              "type": "string"
            },
            "address2": {
              "type": "string"
            },
            "address3": {
              "type": "string"
            },
            "address4": {
              "type": "string"
            },
            "addressPostcode": {
              "type": "string"
            }
          },
          "required": [
            "address1",
            "address4",
            "addressPostcode"
          ]
        }
      },
      "required": [
        "organisationId",
        "status",
        "startDate"
      ]
    }
  }
}