{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/courts/progression/query/courtApplicationAtAGlance.json",
  "description": "A summary of a court application",
  "type": "object",
  "properties": {
    "applicationId": {
      "type": "string"
    },
    "applicationDetails": {
      "description": "Describes the application details",
      "type": "object",
      "properties": {
        "applicationReference": {
          "type": "string"
        },
        "applicationType": {
          "type": "string"
        },
        "appeal": {
          "type": "boolean"
        },
        "applicantAppellantFlag": {
          "type": "boolean"
        },
        "applicationReceivedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "applicationParticulars": {
          "type": "string"
        },
        "feePayable": {
          "type": "boolean"
        },
        "paymentReference": {
          "type": "string"
        },
        "feeStatus": {
          "$ref": "#/definitions/civilFeeStatus"
        },
        "contestedFeeStatus": {
          "$ref": "#/definitions/civilFeeStatus"
        },
        "contestedPaymentReference": {
          "type": "string"
        },
        "isExParte": {
          "description": "Persists ex parte value on offence (constant)",
          "type": "boolean"
        },
        "isCivil": {
          "description": "is civil application",
          "type": "boolean"
        },
        "isGroupCaseApplication": {
          "description": "is application for group cases",
          "type": "boolean"
        },
        "aagResults": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/aagResult"
          }
        },
        "plea": {
          "$ref": "http://justice.gov.uk/core/courts/plea.json"
        },
        "verdict": {
          "$ref": "http://justice.gov.uk/core/courts/verdict.json"
        }
      },
      "additionalProperties": false
    },
    "applicantDetails": {
      "type": "object",
      "properties": {
        "applicantSynonym": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "isProbationBreach": {
          "type": "boolean"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        },
        "interpreterLanguageNeeds": {
          "type": "string"
        },
        "remandStatus": {
          "type": "string"
        },
        "representation": {
          "type": "string"
        },
        "isSubject": {
          "type": "boolean"
        },
        "updatedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false
    },
    "respondentDetails": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/respondentDetail"
      },
      "additionalProperties": false
    },
    "linkedApplications": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/applicationSummary"
      }
    },
    "linkedCases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/caseSummary"
      }
    },
    "thirdParties": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/thirdPartyDetail"
      }
    }
  },
  "required": [
    "applicationId",
    "applicationDetails"
  ],
  "additionalProperties": false,
  "definitions": {
    "applicationSummary": {
      "type": "object",
      "properties": {
        "applicationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationTitle": {
          "type": "string"
        },
        "applicationReference": {
          "description": "The human readable reference for the application.  For linked applications this will be the case urn or the prosecution authority reference suffixed with a numerical sequence",
          "type": "string"
        },
        "applicationStatus": {
          "description": "Indicates if the application is draft, listed or resulted",
          "type": "string"
        },
        "removalReason": {
          "description": "Removal reason if application is ejected",
          "type": "string"
        },
        "applicantDisplayName": {
          "type": "string"
        },
        "respondentDisplayNames": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "string"
          }
        },
        "isAppeal": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "caseSummary": {
      "type": "object",
      "properties": {
        "prosecutionCaseId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        },
        "isPrimaryCase": {
          "type": "boolean"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/offence"
          }
        }
      },
      "additionalProperties": false
    },
    "offence": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "offenceCode": {
          "type": "string"
        },
        "offenceTitle": {
          "type": "string"
        },
        "offenceTitleWelsh": {
          "type": "string"
        },
        "offenceLegislation": {
          "type": "string"
        },
        "offenceLegislationWelsh": {
          "type": "string"
        },
        "wording": {
          "type": "string"
        },
        "wordingWelsh": {
          "type": "string"
        },
        "startDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "endDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "count": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
        },
        "allocationDecision": {
          "$ref": "http://justice.gov.uk/core/courts/allocationDecision.json"
        },
        "plea": {
          "$ref": "http://justice.gov.uk/core/courts/plea.json"
        },
        "verdict": {
          "$ref": "http://justice.gov.uk/core/courts/verdict.json"
        },
        "aagResults": {
          "description": "offence level results",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/aagResult"
          }
        },
        "custodyTimeLimit": {
          "$ref": "http://justice.gov.uk/core/courts/custodyTimeLimit.json"
        },
        "reportingRestrictions": {
          "description": "Reporting restrictions",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/reportingRestriction.json"
          }
        }
      },
      "required": [
        "id",
        "offenceCode",
        "offenceTitle",
        "wording",
        "startDate"
      ],
      "additionalProperties": false
    },
    "respondentDetail": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "isProbationBreach": {
          "type": "boolean"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        },
        "respondentRepresentatives": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/respondentRepresentative"
          }
        },
        "isSubject": {
          "type": "boolean"
        },
        "updatedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false
    },
    "respondentRepresentative": {
      "type": "object",
      "properties": {
        "representativeName": {
          "type": "string"
        },
        "representativePosition": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "thirdPartyDetail": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        },
        "thirdPartyRepresentatives": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/respondentRepresentative"
          }
        }
      },
      "additionalProperties": false
    },
    "thirdPartyRepresentatives": {
      "type": "object",
      "properties": {
        "representativeName": {
          "type": "string"
        },
        "representativePosition": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "aagResult": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "label": {
          "type": "string"
        },
        "aagResultPrompts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/aagResultPrompt"
          }
        },
        "orderedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "lastSharedDateTime": {
          "type": "string"
        },
        "amendmentDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "amendmentReason": {
          "type": "string"
        },
        "amendedBy": {
          "type": "string"
        },
        "resultText": {
          "type": "string"
        },
        "useResultText": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "label"
      ],
      "additionalProperties": false
    },
    "aagResultPrompt": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "label",
        "value"
      ],
      "additionalProperties": false
    },
    "civilFeeStatus": {
      "description": "Indicates status of the fee according to fix list",
      "type": "string",
      "enum": [
        "OUTSTANDING",
        "SATISFIED",
        "REFUNDED",
        "WAIVED",
        "PAYMENT_UNDERTAKING_MADE",
        "REDUCED",
        "NOT_APPLICABLE"
      ]
    }
  }
}
