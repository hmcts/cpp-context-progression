{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/courts/progression/query/inactiveMigratedCaseSummaries.json",
  "title": "Inactive Migrated Case Summaries List",
  "type": "object",
  "properties": {
    "inactiveMigratedCaseSummaries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "inactiveCaseSummary": {
            "type": "object",
            "properties": {
              "id": {
                "description": "The unique prosecution case identifier",
                "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
              },
              "migrationSourceSystem": {
                "description": "Details of the source system and migration status",
                "$ref": "http://justice.gov.uk/core/courts/migrationSourceSystem.json"
              },
              "defendants": {
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "Defendant details including court identification",
                  "properties": {
                    "defendantId": {
                      "description": "Unique identifier for the defendant",
                      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
                    },
                    "masterDefendantId": {
                      "description": "Master record identifier for the defendant",
                      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
                    },
                    "personDefendant": {
                      "$ref": "http://justice.gov.uk/core/courts/personDefendant.json"
                    },
                    "offences": {
                      "type": "array",
                      "minItems": 1,
                      "additionalItems": false,
                      "items": {
                        "$ref": "http://justice.gov.uk/core/courts/offence.json"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}