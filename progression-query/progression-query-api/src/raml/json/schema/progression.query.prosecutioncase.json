{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "prosecutionCase": {
      "$ref": "http://justice.gov.uk/core/courts/prosecutionCase.json#"
    },
    "hearingsAtAGlance": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "latestHearingJurisdictionType" : {
          "description": "The jurisdiction type of the latest hearing",
          "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json#"
        },
        "hearings": {
          "description": "Describes the list of hearings for a case.",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/hearing"
          }
        },
        "defendantHearings": {
          "description": "Describes the hearings for a defendant. Required for UI support during selection of Court Extract",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defendantHearings"
          }
        }
      }
    },
    "linkedApplicationsSummary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/applicationSummary"
      }
    },
    "activeCourtOrders": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/courtOrder"
      }
    },
    "relatedCases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/relatedCase"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "hearingDefendant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "dateOfBirth": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "age": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        },
        "defenceOrganisation": {
          "$ref": "#/definitions/defendantDefenceOrganisation"
        },
        "legalAidStatus": {
          "type": "string"
        },
        "proceedingsConcluded": {
          "description": "Indicates that proceedings for the defendant have been concluded i.e. all offences have been disposed with final results or have been withdrawn by the prosecuting authority",
          "type": "boolean"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/hearingDefendantOffence"
          }
        },
        "judicialResults": {
          "description": "defendant case level results",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
          }
        },
        "courtApplications": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplication"
          }
        },
        "custodialEstablishment": {
          "description": "The custodial establishment for Defendant",
          "$ref": "#/definitions/custodyEstablishment"
        }
      },
      "required": [
        "id",
        "name",
        "address",
        "offences"
      ],
      "additionalProperties": false
    },
    "hearing": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
        },
        "reportingRestrictionReason": {
          "type": "string"
        },
        "judiciary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/judicialRole.json#"
          }
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/hearingDay.json#"
          }
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/core/courts/courtCentre.json#"
        },
        "prosecutionCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/prosecutionCounsel.json#"
          }
        },
        "defendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/hearingDefendant"
          }
        },
        "defendantAttendance": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defendantAttendance.json#"
          }
        },
        "hearingListingStatus": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingListingStatus"
        },
        "applicantCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/applicantCounsel.json"
          }
        },
        "respondentCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/respondentCounsel.json"
          }
        },
        "courtApplications": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplication"
          }
        },
        "hasResultAmended": {
          "type": "boolean"
        },
        "companyRepresentatives": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/companyRepresentative.json"
          }
        },
        "youthCourt": {
          "$ref": "http://justice.gov.uk/core/courts/youthCourt.json"
        },
        "youthCourtDefendantIds": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        }
      },
      "required": [
        "id",
        "type",
        "jurisdictionType",
        "hearingDays",
        "courtCentre",
        "hearingListingStatus"
      ],
      "additionalProperties": false
    },
    "defendantDefenceOrganisation": {
      "type": "object",
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "defenceOrganisation": {
          "description": "The organisation details of the defence representation",
          "$ref": "http://justice.gov.uk/core/courts/organisation.json#"
        },
        "defenceCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defenceCounsel.json#"
          }
        }
      },
      "additionalProperties": false
    },
    "hearingDefendantOffence": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "offenceDefinitionId": {
          "description": "The identifier of the offence from reference data",
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "offenceCode": {
          "type": "string"
        },
        "offenceTitle": {
          "type": "string"
        },
        "offenceTitleWelsh": {
          "type": "string"
        },
        "offenceLegislation": {
          "type": "string"
        },
        "offenceLegislationWelsh": {
          "type": "string"
        },
        "wording": {
          "type": "string"
        },
        "wordingWelsh": {
          "type": "string"
        },
        "startDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "endDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "count": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
        },
        "convictionDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "notifiedPlea": {
          "$ref": "http://justice.gov.uk/core/courts/notifiedPlea.json"
        },
        "indicatedPlea": {
          "$ref": "http://justice.gov.uk/core/courts/indicatedPlea.json"
        },
        "pleas": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/plea.json"
          }
        },
        "verdicts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/verdict.json"
          }
        },
        "judicialResults": {
          "description": "offence level results",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
          }
        },
        "acquittalDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "laaApplnReference": {
          "$ref": "http://justice.gov.uk/core/courts/laaReference.json"
        },
        "proceedingsConcluded": {
          "description": "Indicates that proceedings for the defendant have been concluded i.e. all offences have been disposed with final results or have been withdrawn by the prosecuting authority",
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "count",
        "offenceDefinitionId",
        "offenceCode",
        "offenceTitle",
        "wording",
        "startDate"
      ],
      "additionalProperties": false
    },
    "defendantHearings": {
      "type": "object",
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "defendantName": {
          "type": "string"
        },
        "hearingIds": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        }
      },
      "additionalProperties": false
    },
    "courtApplication": {
      "type": "object",
      "properties": {
        "applicationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationType": {
          "description": "The organisation details of the defence representation",
          "type": "string"
        },
        "applicationReceivedDate": {
          "description": "The date that the application was received by HMCTS",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "applicant": {
          "description": "Name of the applicant",
          "type": "string"
        },
        "respondents": {
          "description": "Array of respondents",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/respondent"
          }
        },
        "outcome": {
          "description": "The details of the outcome",
          "type": "string"
        },
        "outcomeDate": {
          "description": "Date of the outcome",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "isAppeal": {
          "description": "Application type isAppealApplication is true and application status is DRAFT or LISTED",
          "type": "boolean"
        },
        "judicialResults": {
          "description": "Application level results",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
          }
        }
      },
      "additionalProperties": false
    },
    "applicationSummary": {
      "type": "object",
      "properties": {
        "applicationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationTitle": {
          "type": "string"
        },
        "applicationReference": {
          "description": "The human readable reference for the application. For linked applications this will be the case urn or the prosecution authority reference suffixed with a numerical sequence",
          "type": "string"
        },
        "applicationStatus": {
          "description": "Indicates if the application is draft, listed or resulted",
          "type": "string"
        },
        "removalReason": {
          "description": "Removal reason if application is ejected",
          "type": "string"
        },
        "applicantDisplayName": {
          "type": "string"
        },
        "applicantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "respondentDisplayNames": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "string"
          }
        },
        "respondentIds": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        },
        "subjectId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "isAppeal": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "respondent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "applicationResponse": {
          "type": "string"
        },
        "responseDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false
    },
    "custodyEstablishment": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "custody": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "custody"
      ]
    },
    "courtOrder": {
      "type": "object",
      "properties": {
        "masterDefendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "courtOrders": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/queryCourtOrder"
          }
        }
      },
      "required": [
        "masterDefendantId",
        "courtOrders"
      ],
      "additionalProperties": false
    },
    "queryCourtOrder": {
      "type": "object",
      "properties": {

      },
      "additionalProperties": true
    },
    "relatedCase": {
      "type": "object",
      "properties": {
        "masterDefendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "cases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/case"
          }
        }
      },
      "required": [
        "masterDefendantId",
        "cases"
      ],

      "additionalProperties": false
    },
    "case": {
      "type": "object",
      "properties": {
        "caseId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json#"
        },
        "caseStatus": {
          "type": "string"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/offence.json"
          }
        }
      },
      "required": [
        "caseId",
        "offences"
      ],
      "additionalProperties": false
    },
    "appealsLodgedInfo": {
        "$ref": "http://justice.gov.uk/courts/progression/query/progression.query.prosecutioncase.caag#/definitions/appealsLodgedInfo"
    }
  }
}

