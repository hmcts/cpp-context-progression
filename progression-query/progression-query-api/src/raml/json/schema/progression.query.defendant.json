{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "$id": "http://example.com/example.json",
  "properties": {
    "defendantId": {
      "type": "string",
      "$id": "/properties/defendantId"
    },
    "sentenceHearingReviewDecision": {
      "type": "boolean",
      "$id": "/properties/sentenceHearingReviewDecision"
    },
    "sentenceHearingReviewDecisionDateTime": {
      "type": "string",
      "$id": "/properties/sentenceHearingReviewDecisionDateTime"
    },
    "additionalInformation": {
      "type": "object",
      "$id": "/properties/additionalInformation",
      "properties": {
        "noMoreInformationRequired": {
          "type": "boolean",
          "$id": "/properties/additionalInformation/properties/noMoreInformationRequired"
        },
        "probation": {
          "type": "object",
          "$id": "/properties/additionalInformation/properties/probation",
          "properties": {
            "preSentenceReport": {
              "type": "object",
              "$id": "/properties/additionalInformation/properties/probation/properties/preSentenceReport",
              "properties": {
                "psrIsRequested": {
                  "type": "boolean",
                  "$id": "/properties/additionalInformation/properties/probation/properties/preSentenceReport/properties/psrIsRequested"
                },
                "provideGuidance": {
                  "type": "string",
                  "$id": "/properties/additionalInformation/properties/probation/properties/preSentenceReport/properties/provideGuidance"
                },
                "drugAssessment": {
                  "type": "boolean",
                  "$id": "/properties/additionalInformation/properties/probation/properties/preSentenceReport/properties/drugAssessment"
                }
              }
            },
            "dangerousnessAssessment": {
              "type": "boolean",
              "$id": "/properties/additionalInformation/properties/probation/properties/dangerousnessAssessment"
            }
          }
        },
        "defence": {
          "type": "object",
          "$id": "/properties/additionalInformation/properties/defence",
          "properties": {
            "statementOfMeans": {
              "type": "object",
              "$id": "/properties/additionalInformation/properties/defence/properties/statementOfMeans",
              "properties": {
                "isStatementOfMeans": {
                  "type": "boolean",
                  "$id": "/properties/additionalInformation/properties/defence/properties/statementOfMeans/properties/isStatementOfMeans"
                },
                "details": {
                  "type": "string",
                  "$id": "/properties/additionalInformation/properties/defence/properties/statementOfMeans/properties/details"
                }
              }
            },
            "medicalDocumentation": {
              "type": "object",
              "$id": "/properties/additionalInformation/properties/defence/properties/medicalDocumentation",
              "properties": {
                "isMedicalDocumentation": {
                  "type": "boolean",
                  "$id": "/properties/additionalInformation/properties/defence/properties/medicalDocumentation/properties/isMedicalDocumentation"
                },
                "details": {
                  "type": "string",
                  "$id": "/properties/additionalInformation/properties/defence/properties/medicalDocumentation/properties/details"
                }
              }
            },
            "otherDetails": {
              "type": "string",
              "$id": "/properties/additionalInformation/properties/defence/properties/otherDetails"
            }
          }
        },
        "prosecution": {
          "type": "object",
          "$id": "/properties/additionalInformation/properties/prosecution",
          "properties": {
            "ancillaryOrders": {
              "type": "object",
              "$id": "/properties/additionalInformation/properties/prosecution/properties/ancillaryOrders",
              "properties": {
                "isAncillaryOrders": {
                  "type": "boolean",
                  "$id": "/properties/additionalInformation/properties/prosecution/properties/ancillaryOrders/properties/isAncillaryOrders"
                },
                "details": {
                  "type": "string",
                  "$id": "/properties/additionalInformation/properties/prosecution/properties/ancillaryOrders/properties/details"
                }
              }
            },
            "otherDetails": {
              "type": "string",
              "$id": "/properties/additionalInformation/properties/prosecution/properties/otherDetails"
            }
          }
        }
      }
    },
    "personId": {
      "type": "string",
      "$id": "/properties/personId"
    },
    "person": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string",
          "pattern": "^((([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13578]|1[02])\\-(0[1-9]|[12]\\d|3[01]))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13456789]|1[012])\\-(0[1-9]|[12]\\d|30))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-02\\-(0[1-9]|1\\d|2[0-8]))|(((1[6-9]|[2-9]\\d)(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00))\\-02\\-29))$"
        },
        "nationality": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "homeTelephone": {
          "type": "string"
        },
        "workTelephone": {
          "type": "string"
        },
        "mobile": {
          "type": "string"
        },
        "fax": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "addressId": {
              "type": "string"
            },
            "address1": {
              "type": "string"
            },
            "address2": {
              "type": "string"
            },
            "address3": {
              "type": "string"
            },
            "address4": {
              "type": "string"
            },
            "postCode": {
              "type": "string"
            }
          }
        }
      }
    },
    "caseId": {
      "type": "string",
      "$id": "/properties/caseId"
    },
    "policeDefendantId": {
      "type": "string",
      "$id": "/properties/policeDefendantId"
    },
    "bailStatus": {
      "type": "string",
      "$id": "/properties/bailStatus"
    },
    "defendantBailDocuments": {
      "type": "array",
      "$id": "/properties/defendantBailDocuments",
      "items": {
        "type": "object",
        "$id": "/properties/defendantBailDocuments/items",
        "properties": {
          "id": {
            "type": "string",
            "$id": "/properties/defendantBailDocuments/items/properties/id"
          },
          "documentId": {
            "type": "string",
            "$id": "/properties/defendantBailDocuments/items/properties/documentId"
          },
          "active": {
            "type": "boolean",
            "$id": "/properties/defendantBailDocuments/items/properties/active"
          }
        }
      }
    },
    "custodyTimeLimitDate": {
      "type": "string",
      "$id": "/properties/custodyTimeLimitDate"
    },
    "defenceSolicitorFirm": {
      "type": "string",
      "$id": "/properties/defenceSolicitorFirm"
    },
    "interpreter": {
      "type": "object",
      "$id": "/properties/interpreter",
      "properties": {
        "needed": {
          "type": "boolean",
          "$id": "/properties/interpreter/properties/needed"
        },
        "language": {
          "type": "string",
          "$id": "/properties/interpreter/properties/language"
        }
      }
    },
    "offences": {
      "type": "array",
      "$id": "/properties/offences",
      "items": {
        "type": "object",
        "$id": "/properties/offences/items",
        "properties": {
          "id": {
            "type": "string",
            "$id": "/properties/offences/items/properties/id"
          },
          "offenceCode": {
            "type": "string",
            "$id": "/properties/offences/items/properties/offenceCode"
          },
          "plea": {
            "type": "object",
            "$id": "/properties/offences/items/properties/plea",
            "properties": {
              "id": {
                "type": "string",
                "$id": "/properties/offences/items/properties/plea/id"
              },
              "value": {
                "type": "string",
                "enum": [
                  "GUILTY"
                ],
                "$id": "/properties/offences/items/properties/plea/value"
              },
              "pleaDate": {
                "type": "string",
                "$id": "/properties/offences/items/properties/plea/pleaDate"
              }
            }
          },
          "indicatedPlea": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "$id": "/properties/offences/items/properties/indicatedPlea/id"
              },
              "value": {
                "type": "string",
                "enum": [
                  "NO_INDICATION",
                  "INDICATED_GUILTY",
                  "INDICATED_NOT_GUILTY"
                ],
                "$id": "/properties/offences/items/properties/indicatedPlea/value"
              },
              "allocationDecision": {
                "type": "string",
                "$id": "/properties/offences/items/properties/indicatedPlea/allocationDecision"
              }
            }
          },
          "section": {
            "type": "string",
            "$id": "/properties/offences/items/properties/section"
          },
          "offenceSequenceNumber": {
            "type": "integer",
            "$id": "/properties/offences/items/properties/offenceSequenceNumber"
          },
          "pleaMitigation": {
            "type": "string",
            "$id": "/properties/offences/items/properties/pleaMitigation"
          },
          "wording": {
            "type": "string",
            "$id": "/properties/offences/items/properties/wording"
          },
          "policeOffenceId": {
            "type": "string",
            "$id": "/properties/offences/items/properties/policeOffenceId"
          },
          "cprDefendantOffenderYear": {
            "type": "string",
            "$id": "/properties/offences/items/properties/cprDefendantOffenderYear"
          },
          "cprDefendantOffenderOrganisationUnit": {
            "type": "string",
            "$id": "/properties/offences/items/properties/cprDefendantOffenderOrganisationUnit"
          },
          "cprDefendantOffenderNumber": {
            "type": "string",
            "$id": "/properties/offences/items/properties/cprDefendantOffenderNumber"
          },
          "cprDefendantOffenderCheckDigit": {
            "type": "string",
            "$id": "/properties/offences/items/properties/cprDefendantOffenderCheckDigit"
          },
          "reason": {
            "type": "string",
            "$id": "/properties/offences/items/properties/reason"
          },
          "description": {
            "type": "string",
            "$id": "/properties/offences/items/properties/description"
          },
          "category": {
            "type": "string",
            "$id": "/properties/offences/items/properties/category"
          },
          "arrestDate": {
            "type": "string",
            "$id": "/properties/offences/items/properties/arrestDate"
          },
          "startDate": {
            "type": "string",
            "$id": "/properties/offences/items/properties/startDate"
          },
          "endDate": {
            "type": "string",
            "$id": "/properties/offences/items/properties/endDate"
          },
          "chargeDate": {
            "type": "string",
            "$id": "/properties/offences/items/properties/chargeDate"
          },
          "count": {
            "type": "integer",
            "$id": "/properties/offences/items/properties/count"
          }
        }
      }
    }
  }
}
