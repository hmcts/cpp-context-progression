<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="hearing_result_line" author="cpp.context.progression">

        <createTable tableName="hearing_result_line">
            <column name="id" type="UUID"/>
            <column name="hearing_id" type="UUID"/>
            <column name="payload" type="TEXT"/>
        </createTable>


        <addPrimaryKey columnNames="id" constraintName="hearing_result_line_primary_key"
                       tableName="hearing_result_line"/>

        <addForeignKeyConstraint baseColumnNames="hearing_id" baseTableName="hearing_result_line"
                                 constraintName="fk_hearing_result_line_id" deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="hearing_id"
                                 referencedTableName="hearing"/>

    </changeSet>

</databaseChangeLog>
