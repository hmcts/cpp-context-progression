<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="add-index-court-document-index-table.xml" author="ashwinac"
               logicalFilePath="liquibase/changelog.xml">

        <createIndex tableName="court_document_index"
                     indexName="court_document_index_prosecution_case_id_idx">
            <column name="prosecution_case_id"/>
        </createIndex>

        <createIndex tableName="court_document_index"
                     indexName="court_document_index_defendant_id_idx">
            <column name="defendant_id"/>
        </createIndex>

        <createIndex tableName="court_document_index"
                     indexName="court_document_index_hearing_id_idx">
            <column name="hearing_id"/>
        </createIndex>

        <createIndex tableName="court_document_index"
                     indexName="court_document_index_court_document_id_idx">
            <column name="court_document_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="court_document_index" indexName="court_document_index_prosecution_case_id_idx"/>
            <dropIndex tableName="court_document_index" indexName="court_document_index_defendant_id_idx"/>
            <dropIndex tableName="court_document_index" indexName="court_document_index_hearing_id_idx"/>
            <dropIndex tableName="court_document_index" indexName="court_document_index_court_document_id_idx"/>
        </rollback>

    </changeSet>
</databaseChangeLog>
