<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="create-related-reference" author="cpp.context.progression">

        <createTable tableName="related_reference">
            <column name="id" type="UUID"/>
            <column name="prosecution_case_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="reference" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="related_reference" columnNames="id" constraintName="pk_related_reference"/>

    </changeSet>
</databaseChangeLog>
