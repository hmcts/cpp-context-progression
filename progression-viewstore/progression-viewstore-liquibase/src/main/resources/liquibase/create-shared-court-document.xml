<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="create-shared-court-document" author="cpp.context.progression">
        <createTable tableName="shared_court_document">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="court_document_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="hearing_id" type="UUID" />
            <column name="user_group_id" type="UUID" />
            <column name="user_id" type="UUID" />
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="shared_court_document_primary_key"
                       tableName="shared_court_document"/>
    </changeSet>

</databaseChangeLog>
