                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="alter-table-pet-case-defendant-offence-drop-offence" author="Sudhindra Seetharama">
        <dropPrimaryKey constraintName="pk_pet_case_defendant_offence"
                        tableName="pet_case_defendant_offence"/>
