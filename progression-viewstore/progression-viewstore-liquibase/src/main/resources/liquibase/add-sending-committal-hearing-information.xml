<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="add-sending-committal-hearing-info-id" author="Jayen Chondigara">
		<addColumn tableName="caseprogressiondetail">
			<column name="fromcourtcentre" type="VARCHAR(255)" />
			<column name="sendingcommittaldate" type="date" />
			<column name="justicesadjudicating1" type="VARCHAR(2000)" />
			<column name="justicesadjudicating2" type="VARCHAR(2000)" />
			<column name="justicesadjudicating3" type="VARCHAR(2000)" />
			<column name="defencerepresentative" type="VARCHAR(255)" />
			<column name="maatreference" type="VARCHAR(255)" />
		</addColumn>
	</changeSet>
	
	 <changeSet id="remove-sending-committal-hearing-info-id" author="Jayen Chondigara">
        <dropColumn columnName="justicesadjudicating1" tableName="caseprogressiondetail" />
        <dropColumn columnName="justicesadjudicating2" tableName="caseprogressiondetail" />
        <dropColumn columnName="justicesadjudicating3" tableName="caseprogressiondetail" />
        <dropColumn columnName="defencerepresentative" tableName="caseprogressiondetail" />
        <dropColumn columnName="maatreference" tableName="caseprogressiondetail" />
    </changeSet>
    
</databaseChangeLog>