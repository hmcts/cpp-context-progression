<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="modify-notification-status-table" author="CCR2" logicalFilePath="liquibase/changelog.xml">
        <addColumn tableName="notification_status">
            <column name="application_id" type="uuid" />
            <column name="notification_type" type="TEXT" defaultValue="PRINT">
                <constraints nullable="false"/>
            </column>
            <column name="payload" type="TEXT"/>
        </addColumn>
        <dropNotNullConstraint tableName="notification_status" columnName="case_id" />
    </changeSet>
</databaseChangeLog>
