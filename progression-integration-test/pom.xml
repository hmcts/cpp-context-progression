                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <skipITs>false</skipITs>
                            <runOrder>alphabetical</runOrder>
                            <systemPropertyVariables>
                                <INTEGRATION_HOST_KEY>${INTEGRATION_HOST_KEY}</INTEGRATION_HOST_KEY>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                    <!-- Running with embedded elasticsearch by default - removed on recommendation from DevOps -->

                </plugins>
            </build>
