{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/public.hearing.now-document-request.json",
  "description": "The details required to generate a now document",
  "type": "object",
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "applicationId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "nowTypeId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "materialId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "isRemotePrintingRequired": {
      "description": "Indicates if the document needs to be sent for remote printing",
      "type": "boolean"
    },
    "usergroups": {
      "description": "The user groups that are authorised to view the now document",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "emailNotifications": {
      "description": "The email notifications required to be sent for this document",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/notification/email-channel.json"
      }
    },
    "nowContent": {
      "$ref": "http://justice.gov.uk/core/courts/nowdocument/now-document-content.json"
    },
    "priority": {
      "type": "string"
    }
  },
  "required": [
    "hearingId",
    "nowTypeId",
    "materialId",
    "isRemotePrintingRequired",
    "usergroups",
    "nowContent"
  ],
  "additionalProperties": false
}