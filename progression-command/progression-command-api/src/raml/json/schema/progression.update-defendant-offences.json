{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/progression/command/update-defendant-offences.json",
  "type": "object",
  "properties": {
    "defendantsOffences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "switchedToYouth": {
            "type": "boolean"
          },
          "defendantCaseOffences": {
            "$ref": "#/definitions/defendantCaseOffences"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "defendantsOffences"
  ],
  "additionalProperties": false,
  "definitions": {
    "defendantCaseOffences": {
      "type": "object",
      "required": [
        "defendantId",
        "prosecutionCaseId",
        "offences"
      ],
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "legalAidStatus": {
          "type": "string"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/offence.json#"
          }
        }
      }
    }
  }
}

