{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/update-court-document.json",
  "type": "object",
  "properties": {
    "courtDocumentId": {
      "description": "The technical identifier of a document",
      "$ref": "courtsDefinitions.json#/definitions/uuid"
    },
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "documentTypeId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "name": {
      "type": "string"
    },
    "receivedDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "containsFinancialMeans": {
      "type": "boolean"
    },
    "defendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "applicationId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "sendToCps": {
      "type": "boolean"
    }
  },
  "oneOf": [
    {
      "required": [
        "courtDocumentId",
        "prosecutionCaseId",
        "documentTypeId",
        "name",
        "receivedDateTime",
        "containsFinancialMeans"
      ]
    },
    {
      "required": [
        "courtDocumentId",
        "applicationId",
        "documentTypeId",
        "name",
        "receivedDateTime",
        "containsFinancialMeans"
      ]
    }
  ],
  "additionalProperties": false
}