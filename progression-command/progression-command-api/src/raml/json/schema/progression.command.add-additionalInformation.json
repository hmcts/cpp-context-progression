{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "defendantId": {
      "type": "string"
    },
    "sentenceHearingReviewDecision": {
      "type": "boolean"
    },
    "sentenceHearingReviewDecisionDateTime": {
      "type": "string"
    },
    "additionalInformation": {
      "type": "object",
      "properties": {
        "probation": {
          "type": "object",
          "properties": {
            "preSentenceReport": {
              "type": "object",
              "properties": {
                "psrIsRequested": {
                  "type": "boolean"
                },
                "provideGuidance": {
                  "type": "string"
                },
                "drugAssessment": {
                  "type": "boolean"
                }
              },
              "required": [
                "psrIsRequested"
              ]
            },
            "dangerousnessAssessment": {
              "type": "boolean"
            }
          },
          "required": [
            "preSentenceReport"
          ]
        },
        "defence": {
          "type": "object",
          "properties": {
            "statementOfMeans": {
              "type": "object",
              "properties": {
                "isStatementOfMeans": {
                  "type": "boolean"
                },
                "details": {
                  "type": "string"
                }
              },
              "required": [
                "isStatementOfMeans"
              ]
            },
            "medicalDocumentation": {
              "type": "object",
              "properties": {
                "isMedicalDocumentation": {
                  "type": "boolean"
                },
                "details": {
                  "type": "string"
                }
              },
              "required": [
                "isMedicalDocumentation"
              ]
            },
            "otherDetails": {
              "type": "string"
            }
          },
          "required": [
            "statementOfMeans"
          ]
        },
        "prosecution": {
          "type": "object",
          "properties": {
            "ancillaryOrders": {
              "type": "object",
              "properties": {
                "isAncillaryOrders": {
                  "type": "boolean"
                },
                "details": {
                  "type": "string"
                }
              },
              "required": [
                "isAncillaryOrders"
              ]
            },
            "otherDetails": {
              "type": "string"
            }
          },
          "required": [
            "ancillaryOrders"
          ]
        }
      },
      "required": [
        "probation"
      ]
    }
  },
  "required": [
    "defendantId",
    "sentenceHearingReviewDecision",
    "sentenceHearingReviewDecisionDateTime"
  ]
}