{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/progression/command/create-cotr.json",
  "type": "object",
  "properties": {
    "cotrId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseUrn": {
      "description": "case urn",
      "type": "string"
    },
    "hearingDate": {
      "description": "hearing date",
      "type": "string",
      "format": "date"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "courtCenter": {
      "description": "court center name",
      "type": "string"
    },
    "defendantIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    }
  },
  "required": [
    "cotrId",
    "caseId",
    "hearingId",
    "caseUrn",
    "hearingDate",
    "jurisdictionType",
    "courtCenter",
    "defendantIds"
  ],
  "additionalProperties": false
}