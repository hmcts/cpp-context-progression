{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearing.command.remove-offences-from-existing-hearing.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "offenceIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "isNextHearingDeleting": {
        "type": "boolean"
    }
  },
  "required": [
    "hearingId",
    "offenceIds"
  ],
  "additionalProperties": false
}