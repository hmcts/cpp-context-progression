{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/update-defendant-for-prosecution-case-with-custodial-establishment.json",
  "type": "object",
  "description": "The defendant for an individual prosecution case.  Defendant details are NOT associated to multiple prosecution cases.  HMCTS business does not have authority to merge defendant details or recognise a single view of defendant",
  "properties": {
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "custodialEstablishment": {
      "$ref": "#/definitions/custodialEstablishment"
    },
    "masterDefendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    }
  },
  "required": [
    "prosecutionCaseId",
    "custodialEstablishment",
    "masterDefendantId",
    "defendantId"
  ],
  "additionalProperties": false,
  "definitions": {
    "custodialEstablishment": {
      "type": "object",
      "properties": {
        "custody": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        }
      },
      "required": [
        "id",
        "name"
      ]
    }
  }
}
