{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/courts/link-cases.json",
  "type": "object",
  "properties": {
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "casesToLink": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "caseUrns": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "caseLinkType": {
            "type": "string",
            "enum": [
              "LINK",
              "SPLIT",
              "MERGE"
            ]
          }
        },
        "required": [
          "caseUrns",
          "caseLinkType"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "prosecutionCaseId",
    "casesToLink"
  ],
  "additionalProperties": false
}
