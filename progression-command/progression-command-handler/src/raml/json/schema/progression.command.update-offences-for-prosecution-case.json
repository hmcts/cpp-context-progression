{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/update-offences-for-prosecution-case.json",
  "type": "object",
  "properties": {
    "switchedToYouth": {
      "type": "boolean"
    },
    "defendantCaseOffences": {
      "$ref": "#/definitions/defendantCaseOffences"
    },
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    }
  },
  "required": [
    "defendantCaseOffences"
  ],
  "additionalProperties": false,
  "definitions": {
    "defendantCaseOffences": {
      "type": "object",
      "required": [
        "defendantId",
        "prosecutionCaseId",
        "offences"
      ],
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "legalAidStatus": {
          "type": "string"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/offence.json#"
          }
        }
      }
    }
  }
}
