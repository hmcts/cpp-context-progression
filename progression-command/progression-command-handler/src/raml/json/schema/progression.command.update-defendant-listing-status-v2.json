{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/update-defendant-listing-status-v2.json",
  "type": "object",
  "description": "update listing status for each defendant ",
  "properties": {
    "hearing": {
      "$ref": "http://justice.gov.uk/core/courts/hearing.json#"
    },
    "hearingListingStatus": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingListingStatus"
    },
    "isUnscheduled" : {
      "description": "Indicates if a result cause Listing Unscheduled",
      "type": "boolean"
    },
    "notifyNCES" : {
      "description": "Indicates if a notification email will be sent",
      "type": "boolean"
    },
    "listHearingRequests" : {
      "type" : "array",
      "minItems" : 1,
      "items" : {
        "$ref" : "http://justice.gov.uk/core/courts/listHearingRequest.json#"
      }
    }
  },
  "required": [
    "hearing",
    "hearingListingStatus"
  ],
  "additionalProperties": false
}