{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/courts/unlink-cases.json",
  "type": "object",
  "properties": {
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "prosecutionCaseUrn": {
      "type": "string"
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "caseId": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          },
          "caseUrn": {
            "type": "string"
          },
          "linkGroupId": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        },
        "required": [
          "caseId",
          "caseUrn",
          "linkGroupId"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "prosecutionCaseId",
    "prosecutionCaseUrn",
    "cases"
  ],
  "additionalProperties": false
}
