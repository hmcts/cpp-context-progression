            "properties": {
              "id": {
                "type": "string"
              },
              "value": {
                "type": "string",
                "enum": ["NO_INDICATION", "INDICATED_GUILTY", "INDICATED_NOT_GUILTY"]
              },
              "allocationDecision": {
                "type": "string",
                "enum": [
