{
	 "$schema": "http://json-schema.org/draft-04/schema#",
	 "id": "http://justice.gov.uk/core/courts/authorisationDetails.json",
	 "type": "object",
	 "properties": {
		"userDetails": {
			 "$ref": "http://justice.gov.uk/core/courts/delegatedPowers.json"
		},
		"userRoles": {
			 "type": "array",
			 "minItems": 1,
			 "additionalItems": false,
			 "items": {
				 "type": "string"
			}
		},
		 "authorisedResourceGroups": {
		 	 "description": "homepage groups that the authenticated user is authorised to access by way of their user roles/personas",
			 "type": "array",
			 "minItems": 1,
			 "additionalItems": false,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/authorisedResourceGroup.json"
			}
		},
		 "authorisedResources": {
		 	 "description": "The web resources that the authenticated user is authorised to access",
			 "type": "array",
			 "minItems": 1,
			 "additionalItems": false,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/authorisedResource.json"
			}
		}
	},
	"required": ["userDetails", "userRoles", "authorisedResourceGroups", "authorisedResources"],
	"additionalProperties": false
}