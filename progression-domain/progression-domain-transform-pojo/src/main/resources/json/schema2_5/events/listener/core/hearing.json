{
	 "$schema": "http://json-schema.org/draft-04/schema#",
	 "id": "http://justice.gov.uk/core/courts/hearing.json",
	 "type": "object",
	 "properties": {
		 "id": {
			 "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
		},
		 "jurisdictionType": {
			 "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
		},
		 "reportingRestrictionReason": {
			 "type": "string"
		},
		 "courtCentre": {
			 "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
		},
		 "hearingLanguage": {
			 "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
		},
		 "prosecutionCases": {
			 "description": "The collection of cases to be heard or the case for a linked application with respect to an application hearing",
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/prosecutionCase.json"
			}
		},
		 "hasSharedResults": {
			 "description": "Indicates that the hearing has at least one result shared",
			 "type": "boolean"
		 },
		 "courtApplications": {
			 "description": "The collection of applications to be heard with respect to an application hearing or the applications for a case with respect to a hearing related to the case",
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/courtApplication.json"
			}
		},
		 "defendantReferralReasons": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/referralReason.json"
			}
		},
		 "hearingCaseNotes": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/hearingCaseNote.json"
			}
		},
		 "type": {
			 "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
		 },
		 "hearingDays": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
			 }
		 },
		 "judiciary": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/judicialRole.json"
			 }
		 },
		 "applicantCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/applicantCounsel.json"
			 }
		 },
		 "respondentCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/respondentCounsel.json"
			 }
		 },
		 "prosecutionCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/prosecutionCounsel.json"
			 }
		 },
		 "defenceCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/defenceCounsel.json"
			 }
		 },
		 "applicationPartyCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyCounsel.json"
			 }
		 },
		 "defendantAttendance": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/defendantAttendance.json"
			 }
		 },
		 "courtApplicationPartyAttendance": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyAttendance.json"
			 }
		 },
		 "crackedIneffectiveTrial": {
			 "$ref": "http://justice.gov.uk/core/courts/crackedIneffectiveTrial.json"
		 }
	},
	 "required": [
		"id",
		"jurisdictionType",
		"courtCentre",
        "type",
        "hearingDays"
	],
	 "additionalProperties": false
}