{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/nowdocument/financial-order-details.json",
  "description": "The details for a financial order rendered in a now document",
  "type": "object",
  "properties": {
    "enforcementPhoneNumber": {
      "type": "string"
    },
    "enforcementEmail": {
      "type": "string",
      "format": "email"
    },
    "enforcementAddress": {
      "$ref": "http://justice.gov.uk/core/courts/nowdocument/nowaddress.json"
    },
    "accountingDivisionCode": {
      "type": "string"
    },
    "accountPaymentReference": {
      "type": "string"
    },
    "bacsBankName": {
      "type": "string"
    },
    "bacsSortCode": {
      "type": "string"
    },
    "bacsAccountNumber": {
      "type": "string"
    },
    "totalAmountImposed": {
      "type": "string"
    },
    "totalBalance": {
      "type": "string"
    },
    "isCrownCourt": {
      "type": "boolean"
    },
    "paymentTerms": {
      "type": "string"
    }
  },
  "required": [
    "enforcementPhoneNumber",
    "enforcementEmail",
    "enforcementAddress",
    "accountingDivisionCode",
    "bacsBankName",
    "bacsSortCode",
    "bacsAccountNumber",
    "totalAmountImposed",
    "totalBalance",
    "isCrownCourt"
  ],
  "additionalProperties": false
}