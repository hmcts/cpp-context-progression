{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/nowdocument/nowdefendant.json",
  "description": "The details for of a defendant rendered in a now document",
  "type": "object",
  "properties": {
    "name": {
	  "type": "string"
	},
	"dateOfBirth": {
	  "type": "string"
	},
	"address": {
	  "$ref": "http://justice.gov.uk/core/courts/nowdocument/nowaddress.json"
	}
  },
  "required": [
    "name",
	"dateOfBirth",
	"address"
  ],
  "additionalProperties": true
}