{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/court-application-updated.json",
  "type":"object",
  "properties":{
    "id": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "applicant": {
      "description": "The party applying to court to make a judicial decision on a matter",
      "$ref": "http://justice.gov.uk/core/courts/courtApplicationParty.json"
    },
    "respondents": {
      "description": "The parties answering to a matter before the court",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtApplicationRespondent.json"
      }
    }
  },
  "additionalProperties":false,
  "required":[
    "id"
  ]
}