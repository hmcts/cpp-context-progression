{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/now.json",
	"description": "A now represents a single order and its variants",
	"type": "object",
	"properties": {
		"id": {
			"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
		},
		"nowsTypeId": {
			"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
		},
		"defendantId": {
			"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
		},
		"documentationLanguage": {
			"description": "Indicates the language of the document.  When bi-lingual set to the main language of the document",
			"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
		},
		"requestedMaterials": {
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "http://justice.gov.uk/core/courts/nowVariant.json"
			}
		},
		"referenceDate": {
			"description": "TODO GPE-6313 readded",
			"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"ljaDetails": {
			"$ref": "http://justice.gov.uk/core/courts/ljaDetails.json"
		},
		"nowWarrants": {
			"$ref": "http://justice.gov.uk/core/courts/warrantOrderDetails.json"
		},
		"financialOrders": {
			"$ref": "http://justice.gov.uk/core/courts/financialOrderDetails.json"
		},
		"nextHearingCourtDetails": {
			"$ref": "http://justice.gov.uk/core/courts/nextHearingCourtDetails.json"
		}
	},
	"required": [
		"id",
		"nowsTypeId",
		"defendantId",
		"documentationLanguage",
		"requestedMaterials"
	],
	"additionalProperties": false
}