{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/nowdocument/defendant-case-offence.json",
  "description": "The offence details for a defendant on a case and the offence results rendered in a NOW document",
  "type": "object",
  "properties": {
    "wording": {
	  "type": "string"
	},
	"startDate": {
	  "type": "string"
	},
	"convictionDate": {
	  "type": "string"
	},
	"results": {
      "type": "array",
      "title": "results",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/nowdocument/result.json"
      }
	}
  },
  "required": [
    "wording",
	"startDate",
	"convictionDate",
	"results"
  ],
  "additionalProperties": false
}