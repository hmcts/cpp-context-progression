{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/courtApplicationHearingSummary.json",
  "description": "A summary of a hearings for a court application",
  "type": "object",
  "properties": {
    "courtApplicationId": {
		"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
	},
	"hearingId": {
		"description": "The identifier of either the court or box hearing",
		"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
	},
	"startDateTime": {
		"description": "The start date of the hearing",
		 "type": "string",
		 "format": "date-time"
	},
	"courtCentre": {
		"description": "The court centre location of the hearing",
		"$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
	},
	"applicationDecisionSoughtByDate": {
      "description": "The date by which a judicial decision is sought.  Relevant for a Box Hearing only",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    }
   },
   "anyOf": [
		{
			"required": [
				"courtApplicationId", "hearingId", "courtCentre", "startDateTime"
			]
		},
		{
			"required": [
				"courtApplicationId", "hearingId", "courtCentre", "applicationDecisionSoughtByDate"
			]
		}
			
  ],
  "additionalProperties": false
}