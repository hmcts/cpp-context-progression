{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/listDefendantRequest.json",
  "type": "object",
  "properties": {
  	"referralReason": {
	  "$ref": "http://justice.gov.uk/core/courts/referralReason.json"
	},
	"defendantId": {
	  "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
	},
    "datesToAvoid": {
      "type": "string"
    },
    "summonsRequired": {
      "description": "The type of summons required",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/summonsType"
    },
    "hearingLanguageNeeds": {
      "description": "The defendants hearing needs.  Indicates the defendants preference for the hearing to be conducted in non English",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
    },
    "prosecutionCaseId": {
		"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
	},
    "defendantOffences": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    }
  },
  "additionalProperties": false,
  "oneOf": [
    {
      "required": [
      	"prosecutionCaseId",
		"defendantOffences",
        "referralReason"
      ]
    },
    {
      "required": [
      	"prosecutionCaseId",
		"defendantOffences",
        "defendantId"
      ]
    }
  ]
}