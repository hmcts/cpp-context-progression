{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/v24/core/courts/nowVariantDefendant.json",
  "description": "A details of the person/organisation that the NOW is addressed to",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "dateOfBirth": {
      "description": "The person date of birth",
      "$ref": "http://justice.gov.uk/v24/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "address": {
      "$ref": "http://justice.gov.uk/v24/core/courts/address.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "address"
  ]
}