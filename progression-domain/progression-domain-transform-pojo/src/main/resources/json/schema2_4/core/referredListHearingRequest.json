{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/v24/core/courts/referredListHearingRequest.json",
  "type": "object",
  "properties": {
    "hearingType": {
      "$ref": "http://justice.gov.uk/v24/core/courts/referredHearingType.json#"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/v24/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
    },
    "earliestStartDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "estimateMinutes": {
      "$ref": "http://justice.gov.uk/v24/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
    },
    "reportingRestrictionReason": {
      "type": "string"
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/v24/core/courts/referredCourtCentre.json#"
    },
    "prosecutorDatesToAvoid": {
      "type": "string"
    },
    "listingDirections": {
      "type": "string"
    },
    "listDefendantRequests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/v24/core/courts/listDefendantRequest.json#"
      }
    }
  },
  "required": [
    "hearingType",
    "jurisdictionType",
    "listDefendantRequests"
  ],
  "additionalProperties": false
}