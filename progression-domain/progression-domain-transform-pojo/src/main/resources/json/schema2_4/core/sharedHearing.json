{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/v24/core/courts/sharedHearing.json",
	"type": "object",
	"properties": {
        "id": {
          "$ref": "http://justice.gov.uk/v24/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "http://justice.gov.uk/v24/core/courts/hearingType.json"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/v24/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
        },
		"reportingRestrictionReason": {
			"type": "string"
		},
       "hearingLanguage": {
			 "$ref": "http://justice.gov.uk/v24/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
		},
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/hearingDay.json"
          }
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/v24/core/courts/courtCentre.json"
        },
        "judiciary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/judicialRole.json"
          }
        },
        "prosecutionCases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/prosecutionCase.json"
          }
        },
        "hasSharedResults": {
          "description": "Indicates that the hearing has at least one result shared",
          "type": "boolean"
        },
        "defendantReferralReasons": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/v24/core/courts/referralReason.json"
			}
		},
        "prosecutionCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/prosecutionCounsel.json"
          }
        },
        "defenceCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/defenceCounsel.json"
          }
        },
        "defendantAttendance": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/defendantAttendance.json"
          }
        },
        "sharedResultLines": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/sharedResultLine.json"
          }
        },
        "hearingCaseNotes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/v24/core/courts/hearingCaseNote.json"
          }
        }
      },
      "required": [
        "id",
        "type",
        "jurisdictionType",
        "prosecutionCases",
        "hearingDays",
        "courtCentre",
        "sharedResultLines"
      ],
	"additionalProperties": false
}