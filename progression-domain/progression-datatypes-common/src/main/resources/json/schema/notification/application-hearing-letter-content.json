{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/notification/application-hearing-letter-content.json",
	"description": "The contents of a letter for a application hearing",
	"type": "object",
	"properties": {
		"subTemplateName": {
			"type": "string"
		},
		"issueDate": {
			"description": "The court date and time that the summons is for",
			"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"ljaCode": {
			"type": "string"
		},
		"ljaName": {
			"type": "string"
		},
		"applicationType": {
			"type": "string"
		},
		"applicationLegislation": {
			"type": "string"
		},
		"courtCentreName": {
			"type": "string"
		},
		"addressee": {
			"$ref": "http://justice.gov.uk/core/courts/notification/application-hearing-letter-addressee.json"
		},
		"hearingCourtDetails": {
			"$ref": "http://justice.gov.uk/core/courts/notification/application-hearing-court-details.json"
		},
		"caseReference": {
			"description": "The reference to the individual case that is the subject of the hearing (caseURN or PRN)",
			"type": "string"
		}
	},
	"required": [
		"issueDate",
		"courtCentreName",
		"addressee",
		"hearingCourtDetails"
	],
	"additionalProperties": false
}