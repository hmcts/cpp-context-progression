{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/ljaDetails.json",
  "description": "Specific data items required by Generating Nows for the given defendant at a sentencing sentencing court",
  "type": "object",
  "properties": {
    "ljaCode": {
      "type": "string"
    },
    "ljaName": {
      "type": "string"
    },
    "bacsBankName": {
      "type": "string"
    },
    "bacsSortCode": {
      "type": "string"
    },
    "bacsAccountNumber": {
      "type": "string"
    },
    "accountDivisionCode": {
      "type": "string"
    },
    "enforcementPhoneNumber": {
      "type": "string"
    },
    "enforcementEmail": {
      "type": "string",
      "format": "email"
    },
    "enforcementAddress": {
      "$ref": "http://justice.gov.uk/core/courts/address.json"
    }
  },
  "required": [
    "ljaCode",
    "ljaName",
    "bacsBankName",
    "bacsSortCode",
    "bacsAccountNumber",
    "accountDivisionCode",
    "enforcementPhoneNumber",
    "enforcementEmail",
    "enforcementAddress"
  ],
  "additionalProperties": false
}