{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/progression.event.offences-moved-to-new-next-hearing.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "seededCase": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/seededCase"
      }
    }
  },
  "required": [
    "hearingId",
    "seededCase"
  ],
  "additionalProperties": false,
  "definitions": {
    "seededCase": {
      "id": "http://justice.gov.uk/core/courts/seededCase.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "seededDefendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/seededDefendant"
          }
        },
        "newDefendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defendant.json"
          }
        }
      },
      "oneOf": [
        {
          "required": [
            "id",
            "seededDefendants"
          ]
        },
        {
          "required": [
            "id",
            "newDefendants"
          ]
        }
      ],
      "additionalProperties": false
    },
    "seededDefendant": {
      "id": "http://justice.gov.uk/core/courts/seededDefendant.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "seededOffences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/offence.json"
          }
        }
      },
      "required": [
        "id",
        "seededOffences"
      ],
      "additionalProperties": false
    }
  }
}
