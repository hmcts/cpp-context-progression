{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/query/trial-hearing.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "type": {
      "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
    },
    "hearingDay": {
      "type": "string",
      "format": "date-time"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
    },
    "trialDefendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/trialDefendant"
      }
    }
  },
  "definitions": {
    "trialDefendant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "fullName": {
          "type": "string"
        },
        "dateOfBirth": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "required": [
        "id",
        "fullName"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "type",
    "hearingDay",
    "jurisdictionType",
    "courtCentre",
    "trialDefendants"

  ],
  "additionalProperties": false
}