{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/progression.event.added-offences-moved-to-hearing.json",
  "type": "object",
  "properties": {
    "newOffences": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/offence.json#"
      }
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "isHearingInitiateEnriched": {
      "type": "boolean"
    }
  },
  "required": [
        "hearingId",
        "defendantId",
        "newOffences",
        "isHearingInitiateEnriched"
  ],
  "additionalProperties": false
}
