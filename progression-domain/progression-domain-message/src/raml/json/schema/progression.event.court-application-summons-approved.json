{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/court-application-summons-approved.json",
  "type": "object",
  "properties": {
    "applicationId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "linkType": {
      "type": "string",
      "enum": [
        "STANDALONE",
        "LINKED",
        "SJP",
        "FIRST_HEARING"
      ]
    },
    "caseIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "summonsApprovedOutcome": {
      "$ref": "http://justice.gov.uk/core/courts/summonsApprovedOutcome.json"
    }
  },
  "required": [
    "applicationId",
    "summonsApprovedOutcome"
  ],
  "additionalProperties": false
}