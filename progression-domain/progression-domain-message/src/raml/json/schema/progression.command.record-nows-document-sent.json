{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/record-nows-document-sent.json",
  "type": "object",
  "properties": {
    "materialId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "payloadFileId": {
      "description": "The payload file id and used as the unique document reference",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingId": {
      "description": "The hearing id of the hearing shared",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "fileName": {
      "description": "The file name",
      "type": "string"
    },
    "nowDistribution": {
      "description": "The details for distributing the Now",
      "$ref": "http://justice.gov.uk/core/courts/nowdocument/now-distribution.json"
    },
    "orderAddressee": {
      "$ref": "http://justice.gov.uk/core/courts/nowdocument/order-addressee.json"
    },
    "cpsProsecutionCase": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": [
    "materialId",
    "payloadFileId",
    "hearingId",
    "fileName",
    "cpsProsecutionCase"
  ]
}