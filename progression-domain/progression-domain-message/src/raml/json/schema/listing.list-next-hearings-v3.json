{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/listing/courts/listing.list-next-hearings-v3.json",
  "type": "object",
  "properties": {
    "hearings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/hearingListingNeeds.json"
      }
    },
    "adjournedFromDate" : {
      "description": "Adjournment date",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "shadowListedOffences": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "hearingId": {
      "description": "the seed hearing id (i.e. the id of the hearing being shared)",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "seedingHearing": {
      "$ref": "http://justice.gov.uk/core/courts/seedingHearing.json#"
    }
  },
  "required": [
    "hearings",
    "hearingId",
    "seedingHearing"
  ],
  "additionalProperties": false
}