{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/query/cotr-form.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseUrn": {
      "type": "string"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingDay": {
      "type": "string",
      "format": "date-time"
    },
    "listedDurationMinutes": {
      "type": "integer"
    },
    "prosecutionFormData": {
      "$ref": "#/definitions/prosecutionFormData"
    },
    "prosecutionAdditionalInfo": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/prosecutionAdditionalInfo"
      }
    },
    "cotrDefendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/cotrDefendant"
      }
    },
    "caseProgressionReviewNote": {
      "type": "string"
    },
    "listingReviewNotes": {
      "type": "string"
    },
    "judgeReviewNotes": {
      "type": "string"
    }
  },
  "definitions": {
    "prosecutionAdditionalInfo": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "information": {
          "type": "string"
        },
        "isCertificationReady": {
          "type": "boolean"
        },
        "addedBy": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "addedByName": {
          "type": "string"
        },
        "addedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    },
    "prosecutionFormData": {
      "type": "object",
      "properties": {
        "prosecutionQuestions": {
          "$ref": "#/definitions/prosecutionQuestions"
        },
        "certification": {
          "$ref": "#/definitions/certification"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    },
    "prosecutionQuestions": {
      "type": "object",
      "properties": {
        "lastRecordedTimeEstimate": {
          "type": "integer"
        },
        "hasAllEvidenceToBeReliedOnBeenServed": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "hasAllDisclosureBeenProvided": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveOtherDirectionsBeenCompliedWith": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveTheProsecutionWitnessesRequiredToAttendAcknowledgedThatTheyWillAttend": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveAnyWitnessSummonsesRequiredBeenReceivedAndServed": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveSpecialMeasuresOrRemoteAttendanceIssuesForWitnessesBeenResolved": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveInterpretersForWitnessesBeenArranged": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveEditedAbeInterviewsBeenPreparedAndAgreed": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "haveArrangementsBeenMadeForStatementOfPointsOfAgreementAndDisagreement": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "isTheCaseReadyToProceedWithoutDelayBeforeTheJury": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "isTheTimeEstimateCorrect": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "furtherInformationToAssistTheCourt": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "furtherProsecutionInformationProvidedAfterCertification": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "formCompletedOnBehalfOfProsecutionBy": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        }
      },
      "additionalProperties": false
    },
    "certification": {
      "type": "object",
      "properties": {
        "certifyThatTheProsecutionIsTrialReady": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "applyForThePtrToBeVacated": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "formCompletedOnBehalfOfTheProsecutionBy": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        },
        "certificationDate": {
          "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
        }
      },
      "additionalProperties": false
    },
    "cotrDefendant": {
      "type": "object",
      "properties": {
        "defendantNumber": {
          "type": "integer"
        },
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "dateOfBirth": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "defenceFormData": {
          "type": "string"
        },
        "defenceAdditionalInfo": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defenceAdditionalInfo"
          }
        },
        "isDefenceServed": {
          "type": "boolean"
        },
        "servedBy": {
          "type": "string"
        },
        "servedOn": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    },
    "defenceAdditionalInfo": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "information": {
          "type": "string"
        },
        "isCertificationReady": {
          "type": "boolean"
        },
        "addedBy": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "addedByName": {
          "type": "string"
        },
        "addedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    }
  },
  "required": [
    "id",
    "caseId"
  ],
  "additionalProperties": false
}

