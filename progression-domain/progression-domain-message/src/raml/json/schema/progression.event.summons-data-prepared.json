{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/summons-data-prepared.json",
  "type": "object",
  "properties": {
    "summonsData": {
      "$ref": "#/definitions/summonsData"
    }
  },
  "required": [
    "summonsData"
  ],
  "definitions": {
    "summonsData": {
      "type": "object",
      "properties": {
        "hearingDateTime": {
          "type": "string",
          "format": "date-time"
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/core/courts/courtCentre.json#"
        },
        "confirmedProsecutionCaseIds": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "#/definitions/confirmedProsecutionCaseId"
          }
        },
        "listDefendantRequests": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/listDefendantRequest.json#"
          }
        },
        "confirmedApplicationIds": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        },
        "courtApplicationPartyListingNeeds": {
          "type": "array",
          "minItems": 1,
          "additionalItems": false,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyListingNeeds.json#"
          }
        }
      },
      "required": [
        "hearingDateTime",
        "courtCentre"
      ],
      "additionalProperties": false
    },
    "confirmedProsecutionCaseId": {
      "id": "http://justice.gov.uk/core/courts/confirmedProsecutionCaseId.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "confirmedDefendantIds": {
          "type": "array",
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        }
      }
    },
    "confirmedApplicationPartyId": {
      "id": "http://justice.gov.uk/core/courts/confirmedApplicationPartyId.json",
      "type": "object",
      "properties": {
        "id": {
          "description": "ID of the application",
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "confirmedPartyIds": {
          "description": "Will always be a list of one with the ID of the subject of the application listed here for now",
          "type": "array",
          "items": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          }
        }
      },
      "required": [
        "id",
        "confirmedPartyIds"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
