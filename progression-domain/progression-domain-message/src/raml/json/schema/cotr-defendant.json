{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/query/cotr-defendant.json",
  "type": "object",
  "properties": {

    "defendantNumber": {
      "type": "integer"
    },
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "dateOfBirth": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "defenceFormData": {
      "type": "string"
    },
    "defenceAdditionalInfo": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/defenceAdditionalInfo"
      }
    },
    "isDefenceServed": {
      "type": "boolean"
    },
    "servedBy": {
      "type": "string"
    },
    "servedOn": {
      "type": "string"
    }
  },
  "definitions": {
    "defenceAdditionalInfo": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "information": {
          "type": "string"
        },
        "isCertificationReady": {
          "type": "boolean"
        },
        "addedBy": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "addedByName": {
          "type": "string"
        },
        "addedOn": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "additionalProperties": false,
      "required": [
        "id"
      ]
    }
  },
  "required": [
    "id"
  ],
  "additionalProperties": false
},