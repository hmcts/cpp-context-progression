{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/prosecutionCase-defendant-listing-status-changed.json",
  "type": "object",
  "description": "update listing status for each defendant ",
  "properties": {
    "hearing": {
      "$ref": "#/definitions/hearing"
    },
    "hearingListingStatus": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingListingStatus"
    },
    "notifyNCES": {
      "type": "boolean"
    }
  },
  "required": [
    "hearing",
    "hearingListingStatus"
  ],
  "additionalProperties": false,
  "definitions": {
    "hearing": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
        },
        "reportingRestrictionReason": {
          "type": "string"
        },
        "estimatedDuration": {
          "description": "Value from the Estimated Duration prompt",
          "type": "string"
        },
        "shadowListedOffences": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        },

        "defendantsWithWelshTranslationList": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defendantsWithWelshTranslation.json"
          }
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
        },
        "youthCourt": {
          "$ref": "http://justice.gov.uk/core/courts/youthCourt.json"
        },
        "youthCourtDefendantIds": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        },
        "hearingLanguage": {
          "$ref": "http://justice.gov.uk/core/courts/hearingLanguage.json"
        },
        "prosecutionCases": {
          "description": "The collection of cases to be heard or the case for a linked application with respect to an application hearing",
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/prosecutionCase.json"
          }
        },
        "defendantJudicialResults": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defendantJudicialResult.json"
          }
        },
        "hasSharedResults": {
          "description": "Indicates that the hearing has at least one result shared",
          "type": "boolean"
        },
        "courtApplications": {
          "description": "The collection of applications to be heard with respect to an application hearing or the applications for a case with respect to a hearing related to the case",
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplication.json"
          }
        },
        "defendantReferralReasons": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/referralReason.json"
          }
        },
        "hearingCaseNotes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/hearingCaseNote.json"
          }
        },
        "type": {
          "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
          }
        },
        "earliestNextHearingDate": {
          "type": "string",
          "format": "date-time"
        },
        "judiciary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/judicialRole.json"
          }
        },
        "applicantCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/applicantCounsel.json"
          }
        },
        "respondentCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/respondentCounsel.json"
          }
        },
        "prosecutionCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/prosecutionCounsel.json"
          }
        },
        "defenceCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defenceCounsel.json"
          }
        },
        "applicationPartyCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyCounsel.json"
          }
        },
        "defendantAttendance": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/defendantAttendance.json"
          }
        },
        "intermediaries": {
          "description": "The collection of interpreter/intermediary are available for a case with respect to a hearing related to the case.",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/interpreterIntermediary.json"
          }
        },
        "courtApplicationPartyAttendance": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyAttendance.json"
          }
        },
        "crackedIneffectiveTrial": {
          "$ref": "http://justice.gov.uk/core/courts/crackedIneffectiveTrial.json"
        },
        "isEffectiveTrial": {
          "description": "Identifies a hearing as an effective trial",
          "type": "boolean"
        },
        "isBoxHearing": {
          "description": "Identifies a hearing as a box hearing",
          "type": "boolean"
        },
        "companyRepresentatives": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/companyRepresentative.json"
          }
        },
        "isVacatedTrial": {
          "type": "boolean"
        },
        "approvalsRequested": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/approvalRequest.json"
          }
        },
        "seedingHearing" : {
          "$ref": "http://justice.gov.uk/core/courts/seedingHearing.json"
        },
        "isVirtualBoxHearing": {
          "description": "Identifies a hearing as a virtual box hearing",
          "type": "boolean"
        },
        "isSJPHearing": {
          "description": "Identifies a hearing as a SJP hearing",
          "type": "boolean"
        },
        "panel": {
          "description": "it can be Adult/Youth ",
          "type": "string"
        },
        "bookingType": {
          "description": "A choice of in-court, or video conference options",
          "type": "string"
        },
        "priority": {
          "description": "Priority marking on hearings/cases",
          "type": "string"
        },
        "specialRequirements": {
          "description": "Special requirements on hearings/cases",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "isGroupProceedings": {
          "description": "The hearing is a logical grouping of cases when it is true",
          "type": "boolean"
        },
        "splitMergeTags": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "jurisdictionType",
        "courtCentre"
      ],
      "additionalProperties": false
    }
  }
}