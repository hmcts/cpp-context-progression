{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/cotr-pdf-content.json",
  "type": "object",
  "properties": {
    "heading": {
      "type": "string"
    },
    "subHeading": {
      "type": "string"
    },
    "summary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "$ref": "#/definitions/section"
      }
    },
    "prosecution": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "$ref": "#/definitions/section"
      }
    },
    "defence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "$ref": "#/definitions/section"
      }
    }
  },
  "definitions": {
    "section": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "titleDescription": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "details": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}