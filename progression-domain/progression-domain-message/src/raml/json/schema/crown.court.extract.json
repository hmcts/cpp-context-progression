{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/courts/exract/court-extract-requested.json",
  "type": "object",
  "properties": {
    "extractType" : {
      "description": "extract type",
      "type": "string"
    },
    "publishingCourt": {
      "$ref": "#/definitions/courtCentre"
    },
    "caseReference": {
      "description": "The reference to the individual case that is the subject of the extract (caseURN or PRN)",
      "type": "string"
    },
    "prosecutingAuthority": {
      "description": "The prosecuting authority for the case in question",
      "$ref": "#/definitions/prosecutingAuthority"
    },
    "defendant": {
      "$ref": "#/definitions/defendant"
    },
    "prosecutionCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/counsel"
      }
    },
    "courtDecisions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/courtDecision"
      }
    }
  },
  "required": [
    "publishingCourt",
    "caseReference",
    "prosecutingAuthority",
    "defendant"
  ],
  "additionalProperties": false,
  "definitions": {
    "sittingDay":{
      "type": "object",
      "properties": {
        "day": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      }
    },
    "counsel": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "attendanceDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/sittingDay"
          }
        }
      },
      "required": [
        "name",
        "role",
        "attendanceDays"
      ],
      "additionalProperties": false
    },
    "courtDecision": {
      "type": "object",
      "properties": {
        "judiciary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/judicialRole"
          }
        },

        "judicialDisplayName": {"type": "string"},
        "roleDisplayName": {"type": "string"},
        "dates": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/sittingDay"
          }
        }
      },
      "required": [
        "dates",
        "judiciary",
        "judicialDisplayName",
        "roleDisplayName"
      ],
      "additionalProperties": false
    },
    "judicialRole": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "description": "A transformation of the enumerated types to a simple string for rendering purposes e.g. MAGISTRATE -> Magistrate, CIRCUIT_JUDGE -> Circuit Judge",
          "type": "string"
        },
        "isDeputy": {
          "description": "Indicates if the judiciary acts as a deputy.  This is applicable to circuit and district judges",
          "type": "boolean"
        },
        "isBenchChairman": {
          "description": "Indicates if the magistrate acts as a bench chairman.  This is only applicable to magistrate roles",
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "role"
      ],
      "additionalProperties": false
    },
    "courtCentre": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "welshName": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        }
      },
      "required": [
        "id",
        "name",
        "address"
      ],
      "additionalProperties": false
    },
    "defendant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "dateOfBirth": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "age": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        },
        "hearings": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/hearing"
          }
        },
        "attendanceDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/sittingDay"
          }
        },
        "defenceOrganisations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defendantDefenceOrganisation"
          }
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/offence"
          }
        },
        "results": {
          "description": "defendant case level results",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/sharedResultLine"
          }
        }
      },
      "required": [
        "id",
        "name",
        "address",
        "offences"
      ],
      "additionalProperties": false
    },
    "prosecutingAuthority": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/core/courts/address.json#"
        }
      },
      "required": [
        "name",
        "address"
      ],
      "additionalProperties": false
    },
    "hearing": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "type": {
          "type": "string"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
        },
        "reportingRestrictionReason": {
          "type": "string"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/sittingDay"
          }
        },
        "courtCentre": {
          "$ref": "#/definitions/courtCentre"
        }
      },
      "required": [
        "id",
        "type",
        "jurisdictionType",
        "hearingDays",
        "courtCentre"
      ],
      "additionalProperties": false
    },
    "defendantDefenceOrganisation": {
      "type": "object",
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "defenceOrganisation": {
          "description": "The organisation details of the defence representation",
          "$ref": "http://justice.gov.uk/core/courts/organisation.json#"
        },
        "defenceCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/counsel"
          }
        }
      }
    },
    "offence": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceDefinitionId": {
          "description": "The identifier of the offence from reference data",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceCode": {
          "type": "string"
        },
        "offenceTitle": {
          "type": "string"
        },
        "offenceTitleWelsh": {
          "type": "string"
        },
        "offenceLegislation": {
          "type": "string"
        },
        "offenceLegislationWelsh": {
          "type": "string"
        },
        "wording": {
          "type": "string"
        },
        "wordingWelsh": {
          "type": "string"
        },
        "startDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "endDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "count": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
        },
        "convictionDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "notifiedPlea": {
          "$ref": "http://justice.gov.uk/core/courts/notifiedPlea.json"
        },
        "indicatedPlea": {
          "$ref": "http://justice.gov.uk/core/courts/indicatedPlea.json"
        },
        "pleas": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/plea.json"
          }
        },
        "verdicts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/verdict.json"
          }
        },
        "results": {
          "description": "offence level results",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/sharedResultLine"
          }
        }
      },
      "required": [
        "id",
        "offenceDefinitionId",
        "offenceCode",
        "wording",
        "startDate"
      ],
      "additionalProperties": false
    },
    "sharedResultLine": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "hearingId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "delegatedPowers": {
          "$ref": "http://justice.gov.uk/core/courts/delegatedPowers.json#"
        },
        "isAvailableForCourtExtract": {
          "description": "Indicates if the result is available to be included in a court extract",
          "type": "boolean"
        },
        "level": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "welshLabel": {
          "type": "string"
        },
        "rank": {
          "type": "number"
        },
        "orderedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "prompts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
              },
              "isAvailableForCourtExtract": {
                "description": "Indicates if the result prompt is available to be included in a court extract",
                "type": "boolean"
              },
              "promptSequence": {
                "type": "number"
              },
              "label": {
                "type": "string"
              },
              "welshLabel": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "welshValue": {
                "type": "string"
              },
              "fixedListCode": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "isAvailableForCourtExtract",
              "label",
              "value"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "id",
        "isAvailableForCourtExtract",
        "level",
        "label"
      ],
      "additionalProperties": false
    }
  }
}