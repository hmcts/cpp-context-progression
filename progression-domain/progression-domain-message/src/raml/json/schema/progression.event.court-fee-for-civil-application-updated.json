{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/court-fee-for-civil-application-updated.json",
  "type": "object",
  "properties": {
    "applicationId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "courtApplicationPayment": {
      "description": "The details of payment or fee exemption for the application",
      "$ref": "#/definitions/courtApplicationPayment"
    }
  },
  "required": [
    "applicationId",
    "courtApplicationPayment"
  ],
  "definitions": {
    "courtApplicationPayment": {
      "properties": {
        "feeStatus": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/civilFeeStatus"
        },
        "paymentReference": {
          "description": "The reference for the payment or exemption",
          "type": "string"
        },
        "contestedFeeStatus": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/civilFeeStatus"
        },
        "contestedPaymentReference": {
          "type": "string"
        }
      }
    }
  }
}