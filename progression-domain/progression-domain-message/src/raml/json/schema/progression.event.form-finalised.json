{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/form-finalised.json",
  "type": "object",
  "properties": {
    "courtFormId": {
      "description": "Court Form Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseURN": {
      "description": "Case URN",
      "type": "string"
    },
    "formType": {
      "description": "Form Type",
      "$ref": "http://justice.gov.uk/core/courts/formType.json"
    },
    "userId": {
      "description": "Logged In User Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "userName": {
      "type": "string"
    },
    "finalisedFormData": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "submissionId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "materialId": {
      "description": "Materail id associated with bcm/ptph form when it gets finalised",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingDateTime": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "caseId",
    "formType",
    "courtFormId",
    "finalisedFormData"
  ],
  "anyOf": [
    {
      "required": ["userId"]
    },
    {
      "required": ["userName"]
    }
  ],
  "additionalProperties": false
}
