{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/staginghmi/courts/public.staginghmi.hearing-updated-from-hmi.json",
  "type": "object",
  "properties": {
    "courtCentreId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "courtRoomId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "type": {
      "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
    },
    "startDate": {
      "type": "string",
      "format": "date"
    },
    "endDate": {
      "type": "string",
      "format": "date"
    },
    "weekCommencingStartDate": {
      "type": "string",
      "format": "date"
    },
    "weekCommencingEndDate": {
      "type": "string",
      "format": "date"
    },
    "weekCommencingDurationInWeeks": {
      "type": "integer",
      "minimum": 1,
      "maximum": 2
    },
    "judiciary": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/judicialRole.json"
      }
    },
    "nonDefaultDays": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/nonDefaultDay"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "nonDefaultDay": {
      "type": "object",
      "properties": {
        "startTime": {
          "type": "string",
          "format": "date-time"
        },
        "duration": {
          "type": "integer"
        },
        "courtScheduleId": {
          "type": "string"
        },
        "session": {
          "type": "string"
        },
        "oucode": {
          "type": "string"
        },
        "courtRoomId": {
          "type": "integer"
        },
        "courtCentreId": {
          "type": "string"
        },
        "roomId": {
          "type": "string"
        }
      },
      "required": [
        "startTime",
        "duration"
      ]
    }
  }
}
