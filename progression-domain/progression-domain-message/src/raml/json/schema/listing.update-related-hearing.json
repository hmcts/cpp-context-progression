{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/listing/courts/listing.update-related-hearing.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "prosecutionCases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/prosecutionCase.json#"
      }
    },
    "shadowListedOffences": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "seedingHearing": {
      "$ref": "http://justice.gov.uk/core/courts/seedingHearing.json#"
    }
  },
  "required": [
    "hearingId",
    "prosecutionCases",
    "seedingHearing"
  ],
  "additionalProperties": false
}