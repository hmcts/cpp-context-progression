{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/court-application-proceedings-initiated.json",
  "type": "object",
  "properties": {
    "courtApplication": {
      "$ref": "http://justice.gov.uk/core/courts/courtApplication.json#"
    },
    "boxHearing": {
      "description": "The details of the required box hearing including agreed appointment details where necessary",
      "$ref": "http://justice.gov.uk/core/courts/boxHearingRequest.json#"
    },
    "courtHearing": {
      "description": "The details of a new court hearing that are required to be listed",
      "$ref": "http://justice.gov.uk/core/courts/courtHearingRequest.json#"
    },
    "summonsApprovalRequired": {
      "description": "Indicates that the summons approval process is required to be initiated",
      "type": "boolean"
    },
    "applicationReferredToNewHearing": {
      "type": "boolean"
    },
    "isSJP": {
      "type": "boolean"
    },
    "isAmended": {
      "type": "boolean"
    },
    "oldApplicationId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "isWelshTranslationRequired": {
      "type": "boolean"
    },
    "issueDate": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    }
  },
  "required": [
    "courtApplication",
    "isSJP"
  ],
  "additionalProperties": false
}
