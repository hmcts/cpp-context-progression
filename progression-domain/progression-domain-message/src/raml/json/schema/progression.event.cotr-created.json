{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/cpp/progression/event/progression.event.cotr-created.json",
  "type": "object",
  "properties": {
    "cotrId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseUrn": {
      "description": "case urn",
      "type": "string"
    },
    "hearingDate": {
      "description": "hearing date",
      "type": "string",
      "format": "date"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "courtCenter": {
      "description": "court center name",
      "type": "string"
    },
    "defendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/defendant"
      }
    },
    "submissionId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    }
  },
  "definitions": {
    "defendant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "dnumber": {
          "type": "integer"
        }
      },
      "required": [
        "id",
        "dnumber"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "cotrId",
    "caseId",
    "hearingId",
    "caseUrn",
    "hearingDate",
    "jurisdictionType",
    "courtCenter",
    "defendants"
  ],
  "additionalProperties": false
}