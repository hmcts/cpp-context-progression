{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/cpp/progression/event/progression.event.cotr-created.json",
  "type": "object",
  "properties": {
    "cotrId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseUrn": {
      "description": "case urn",
      "type": "string"
    },
    "hearingDate": {
      "description": "hearing date",
      "type": "string",
      "format": "date"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "courtCenter": {
      "description": "court center name",
      "type": "string"
    },
    "defendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/defendant"
      }
    },
    "submissionId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "lastRecordedTimeEstimate": {
      "type": "integer"
    },
    "hasAllEvidenceToBeReliedOnBeenServed": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "hasAllDisclosureBeenProvided": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveOtherDirectionsBeenCompliedWith": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveTheProsecutionWitnessesRequiredToAttendAcknowledgedThatTheyWillAttend": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveAnyWitnessSummonsesRequiredBeenReceivedAndServed": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveSpecialMeasuresOrRemoteAttendanceIssuesForWitnessesBeenResolved": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveInterpretersForWitnessesBeenArranged": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveEditedAbeInterviewsBeenPreparedAndAgreed": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "haveArrangementsBeenMadeForStatementOfPointsOfAgreementAndDisagreement": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "isTheCaseReadyToProceedWithoutDelayBeforeTheJury": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "isTheTimeEstimateCorrect": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "certifyThatTheProsecutionIsTrialReady": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "applyForThePtrToBeVacated": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "formCompletedOnBehalfOfTheProsecutionBy": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "certificationDate": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "furtherInformationToAssistTheCourt": {
      "$ref": "http://moj.gov.uk/cpp/progression/polar-question.json"
    },
    "formDefendants": {
      "type": "array",
      "items": {
        "id": "http://justice.gov.uk/cpp/progression/formDefendants.json",
        "type": "object",
        "properties": {
          "defendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "cpsDefendantId": {
            "type": "string"
          }
        },
        "required": [
          "defendantId"
        ],
        "additionalProperties": false
      }
    }
  },
  "definitions": {
    "defendant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "dnumber": {
          "type": "integer"
        }
      },
      "required": [
        "id",
        "dnumber"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "cotrId",
    "caseId",
    "hearingId",
    "caseUrn",
    "hearingDate",
    "jurisdictionType",
    "courtCenter",
    "defendants"
  ],
  "additionalProperties": false
}