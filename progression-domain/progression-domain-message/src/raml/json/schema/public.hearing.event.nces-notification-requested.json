{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/nces/nces-notification-requested.json",
  "description": "The details required to generate a nces document and notify",
  "type": "object",
  "required": [
    "caseId",
    "defendantId",
    "materialId",
    "hearingId",
    "documentContent",
    "emailNotifications"
  ],
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "materialId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "documentContent": {
      "type": "object",
      "properties": {
        "courtCentreName": {
          "description": "Court house name",
          "type": "string"
        },
        "urn": {
          "description": "The case / application reference",
          "type": "string"
        },
        "gobAccountNumber": {
          "description": "The GoB account number",
          "type": "string"
        },
        "divisionCode": {
          "description": "The division code",
          "type": "string"
        },
        "oldGobAccountNumber": {
          "description": "The GoB account number",
          "type": "string"
        },
        "oldDivisionCode": {
          "description": "The division code",
          "type": "string"
        },
        "adjustmentDetails": {
          "type": "string"
        },
        "amendmentType": {
          "type": "string"
        },
        "amendmentDate": {
          "description": "The date amendment was made",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "defendant": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "dateOfBirth": {
              "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
            }
          }
        },
        "defendantCaseOffences": {
          "type": "array",
          "title": "defendantCaseOffences",
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/nowdocument/defendant-case-offence.json"
          }
        }
      },
      "required": [
        "urn",
        "defendant",
        "gobAccountNumber",
        "divisionCode",
        "defendantCaseOffences"
      ],
      "additionalProperties": false
    },
    "emailNotifications": {
      "description": "The email notifications required to be sent for this document",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/notification/email-channel.json"
      }
    }
  }
}
