{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/progression/courts/getCaseAtAGlance.json",
	"type": "object",
	"properties": {
		"getCaseAtAGlance": {
			"type":"object",
			"properties": {
				"id": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"prosecutionCaseIdentifier": {
					"$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json#"
				},
				"hearings": {
					"description": "Describes the list of hearings for a case.",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/hearing"
					}
				},
				"defendantHearings": {
					"description": "Describes the hearings for a defendant.  Required for UI support during selection of Court Extract",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/defendantHearings"
					}
				},
				"courtApplications": {
					"description": "The court application(s) when requesting an application hearing or when listing an application with a prosecution case",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/courtApplication.json"
					}
				}
			}
		}
	},
	"additionalProperties": false,
	"definitions": {
		"hearingDefendant": {
			"type": "object",
			"properties": {
				"id": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"name": {
					"type": "string"
				},
				"dateOfBirth": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				},
				"age": {
					"type": "string"
				},
				"address": {
					"$ref": "http://justice.gov.uk/core/courts/address.json#"
				},
				"defenceOrganisation": {
					"$ref": "#/definitions/defendantDefenceOrganisation"
				},
				"offences": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/hearingDefendantOffence"
					}
				},
				"judicialResults": {
					"description": "defendant case level results",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
					}
				},
				"courtApplications": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/courtApplication"
					}
				}
			},
			"required": [
				"id",
				"name",
				"address",
				"offences"
			],
			"additionalProperties": false
		},
		"hearing": {
			"type": "object",
			"properties": {
				"id": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"type": {
					"$ref": "http://justice.gov.uk/core/courts/hearingType.json"
				},
				"jurisdictionType": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
				},
				"reportingRestrictionReason": {
					"type": "string"
				},
				"judiciary": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/judicialRole.json#"
					}
				},
				"hearingDays": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/hearingDay.json#"
					}
				},
				"courtCentre": {
					"$ref": "http://justice.gov.uk/core/courts/courtCentre.json#"
				},
				"prosecutionCounsels": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/prosecutionCounsel.json#"
					}
				},
				"defendants": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/hearingDefendant"
					}
				},
				"defendantAttendance": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/defendantAttendance.json#"
					}
				},
				"hearingListingStatus": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingListingStatus"
				},
				"defendantReferralReasons": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/referralReason.json"
					}
				},
				"applicantCounsels": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/applicantCounsel.json"
					}
				},
				"respondentCounsels": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/respondentCounsel.json"
					}
				},
				"courtApplications": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/courtApplication"
					}
				},
				"hasResultAmended": {
					"type": "boolean"
				}
			},
			"required": [
				"id",
				"type",
				"jurisdictionType",
				"hearingDays",
				"courtCentre",
				"hearingListingStatus"
			],
			"additionalProperties": false
		},
		"defendantDefenceOrganisation": {
			"type": "object",
			"properties": {
				"defendantId": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"defenceOrganisation": {
					"description": "The organisation details of the defence representation",
					"$ref": "http://justice.gov.uk/core/courts/organisation.json#"
				},
				"defenceCounsels": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/defenceCounsel.json#"
					}
				}
			}
		},
		"hearingDefendantOffence": {
			"type": "object",
			"properties": {
				"id": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"offenceDefinitionId": {
					"description": "The identifier of the offence from reference data",
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"offenceCode": {
					"type": "string"
				},
				"offenceTitle": {
					"type": "string"
				},
				"offenceTitleWelsh": {
					"type": "string"
				},
				"offenceLegislation": {
					"type": "string"
				},
				"offenceLegislationWelsh": {
					"type": "string"
				},
				"wording": {
					"type": "string"
				},
				"wordingWelsh": {
					"type": "string"
				},
				"startDate": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				},
				"endDate": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				},
				"count": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
				},
				"convictionDate": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				},
				"notifiedPlea": {
					"$ref": "http://justice.gov.uk/core/courts/notifiedPlea.json"
				},
				"indicatedPlea": {
					"$ref": "http://justice.gov.uk/core/courts/indicatedPlea.json"
				},
				"pleas": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/plea.json"
					}
				},
				"verdicts": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/verdict.json"
					}
				},
				"judicialResults": {
					"description": "offence level results",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
					}
				},
				"acquittalDate": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				}
			},
			"required": [
				"id",
				"count",
				"offenceDefinitionId",
				"offenceCode",
				"offenceTitle",
				"wording",
				"startDate"
			],
			"additionalProperties": false
		},
		"defendantHearings": {
			"type": "object",
			"properties": {
				"defendantId": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"defendantName": {
					"type": "string"
				},
				"hearingIds": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
					}
				}
			}
		},
		"courtApplication": {
			"type": "object",
			"properties": {
				"applicationId": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
				},
				"applicationType": {
					"description": "The organisation details of the defence representation",
					"type": "string"
				},
				"applicationReceivedDate": {
					"description": "The date that the application was received by HMCTS",
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				},
				"applicant": {
					"description": "Name of the applicant",
					"type": "string"
				},
				"respondents": {
					"description": "Array of respondents",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/respondent"
					}
				},
				"outcome": {
					"description": "The details of the outcome",
					"type": "string"
				},
				"outcomeDate": {
					"description": "Date of the outcome",
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				},
				"isAppeal": {
					"description": "Application type isAppealApplication is true and application status is DRAFT or LISTED",
					"type": "boolean"
				},
				"judicialResults": {
					"description": "Application level results",
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
					}
				}
			}
		},
		"respondent": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"applicationResponse": {
					"type": "string"
				},
				"responseDate": {
					"$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
				}
			},
			"additionalProperties": false
		}
	}
}